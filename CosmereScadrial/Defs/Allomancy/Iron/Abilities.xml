<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <CosmereScadrial.Defs.AllomanticAbilityDef ParentName="AbstractToggleSelfBurnAbility">
        <defName>Cosmere_Ability_Iron_Aura</defName>
        <label>iron aura</label>
        <description>Reveals nearby sources of metal by tracing fine blue lines through the air.
Each line points toward a metal object — coin, armor, blade — waiting to be pushed.
These lines shimmer with the tension of potential force, visible only to those burning Iron.</description>
        <metal>Iron</metal>
        <hediff>Cosmere_Hediff_IronAura</hediff>
        <beuPerTick>0.0004</beuPerTick>
    </CosmereScadrial.Defs.AllomanticAbilityDef>
    <CosmereScadrial.Defs.AllomanticAbilityDef ParentName="AbstractTargetBurnAbility">
        <defName>Cosmere_Ability_Iron_Pull</defName>
        <abilityClass>CosmereScadrial.Abilities.Allomancy.ExternalPhysicalTargetAbility</abilityClass>
        <label>iron pull target</label>
        <description>Burning iron allows the Allomancer to pull on nearby sources of metal, drawing them—or themselves—closer. The lighter object moves, unless anchored by greater mass.</description>
        <cooldownTicksRange>
            <min>20</min>
            <max>60</max>
        </cooldownTicksRange>
        <metal>Iron</metal>
        <verbProperties>
            <requireLineOfSight>false</requireLineOfSight>
            <violent>false</violent>
            <noiseRadius>0</noiseRadius>
            <drawAimPie>false</drawAimPie>
            <targetParams>
                <canTargetSelf>false</canTargetSelf>
                <canTargetPawns>true</canTargetPawns>
                <canTargetAnimals>true</canTargetAnimals>
                <canTargetHumans>true</canTargetHumans>
                <canTargetMechs>true</canTargetMechs>
                <canTargetMutants>true</canTargetMutants>
                <canTargetBuildings>true</canTargetBuildings>
                <canTargetItems>true</canTargetItems>
                <canTargetPlants>false</canTargetPlants>
                <mapObjectTargetsMustBeAutoAttackable>false</mapObjectTargetsMustBeAutoAttackable>
            </targetParams>
        </verbProperties>
    </CosmereScadrial.Defs.AllomanticAbilityDef>
</Defs>