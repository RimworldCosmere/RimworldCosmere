<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_AllomanticVial_Pulling</defName>
        <label>mistborn vial: Pulling</label>
        <description>A vial containing multiple metals suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(255, 255, 255)</color>
        </graphicData>
        <modExtensions>
            <li Class="CosmereMetals.ModExtensions.MetalsLinked">
                <metals>
                    <li>Iron</li>
                    <li>Tin</li>
                    <li>Brass</li>
                    <li>Copper</li>
                    <li>Chromium</li>
                    <li>Cadmium</li>
                    <li>Gold</li>
                </metals>
            </li>
        </modExtensions>
        <orderedTakeGroup>AllomanticVial_Pulling</orderedTakeGroup>
    </ThingDef>
    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_CraftAllomanticVial_Pulling</defName>
        <label>craft mistborn vial: Pulling</label>
        <description>Create a vial of multiple metals suspended in alcohol for use by Mistborns.</description>
        <ingredients>
            <li>
                <filter><thingDefs><li>Iron</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Tin</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Brass</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Copper</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Chromium</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Cadmium</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Gold</li></thingDefs></filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <Cosmere_AllomanticVial_Pulling>8</Cosmere_AllomanticVial_Pulling>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>AllomanticVial_Pulling</defName>
        <label>mistborn vial: Pulling</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>