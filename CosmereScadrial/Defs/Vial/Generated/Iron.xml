<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_AllomanticVial_Iron</defName>
        <label>Misting Vial: Lurcher</label>
        <description>A vial containing Iron suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(121, 113, 111)</color>
            <colorTwo>(121, 113, 111)</colorTwo>
        </graphicData>
        <comps>
            <li Class="CosmereScadrial.Comps.Properties.AllomanticVial">
                <metalNames>
                    <li>iron</li>
                </metalNames>
            </li>
        </comps>
        <orderedTakeGroup>AllomanticVial_Iron</orderedTakeGroup>
    </ThingDef>
    
    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_CraftAllomanticVial_Iron</defName>
        <label>Craft Misting Vial: Lurcher</label>
        <description>Create a vial of Iron infused alcohol for use by Mistborns and lurchers.</description>
        <ingredients>
            <li>
                <filter><thingDefs><li>Iron</li></thingDefs></filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <Cosmere_AllomanticVial_Iron>8</Cosmere_AllomanticVial_Iron>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>AllomanticVial_Iron</defName>
        <label>Allomantic Vial: Iron</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>