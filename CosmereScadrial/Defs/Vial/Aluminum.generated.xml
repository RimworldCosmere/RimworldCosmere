<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_AllomanticVial_Aluminum</defName>
        <label>misting vial: gnat (aluminum)</label>
        <description>A vial containing Aluminum suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(163, 163, 163)</color>
        </graphicData>
        <modExtensions>
            <li Class="CosmereMetals.ModExtensions.MetalsLinked">
                <metal>Aluminum</metal>
            </li>
        </modExtensions>
        <orderedTakeGroup>AllomanticVial_Aluminum</orderedTakeGroup>
    </ThingDef>
    
    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_CraftAllomanticVial_Aluminum</defName>
        <label>craft misting vial: gnat (aluminum)</label>
        <description>Create a vial of Aluminum infused alcohol for use by Mistborns and gnat (aluminum)s.</description>
        <ingredients>
            <li>
                <filter><thingDefs><li>Aluminum</li></thingDefs></filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <Cosmere_AllomanticVial_Aluminum>8</Cosmere_AllomanticVial_Aluminum>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>AllomanticVial_Aluminum</defName>
        <label>allomantic vial: aluminum</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>