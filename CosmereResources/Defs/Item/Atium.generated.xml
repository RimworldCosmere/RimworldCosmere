<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="CosmereResourceBase">
        <defName>Atium</defName>
        <label>Atium</label>
        <description>Atium is the god metal of the Shard Ruin. It grants its user visions of others&#x27; immediate futures, offering immense strategic advantage in combat and prediction.</description>

        <thingCategories/>
        <researchPrerequisites>
            <li>Cosmere_God_Metals</li>
        </researchPrerequisites>

        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1</drawSize>
            <texPath>Item/Resource/Atium</texPath>
        </graphicData>

        <stuffProps>
            <commonality>0.0</commonality>
            <color>(60, 60, 60)</color>
            <categories>
                <li>Cosmere_Resources_StuffCategory_Metals</li>
                <li>Cosmere_Resources_StuffCategory_AllomanticMetals</li>
                <li>Metallic</li>
            </categories>
            <appearance>Metal</appearance>
        </stuffProps>

        <statBases>
            <Beauty>100</Beauty>
            <MarketValue>10000</MarketValue>
        </statBases>

        <modExtensions>
            <li Class="CosmereResources.DefModExtension.MetalsLinked">
                <metal>Atium</metal>
            </li>
        </modExtensions>
        <comps>
            <li Class="CosmereFramework.Comp.Thing.GiveGeneProperties" MayRequire="CryptikLemur.Cosmere.Scadrial">
                <geneDef>Cosmere_Scadrial_Gene_MistingAtium</geneDef>
            </li>
        </comps>
        <soundInteract>Metal_Drop</soundInteract>
        <soundDrop>Metal_Drop</soundDrop>
    </ThingDef>
</Defs>