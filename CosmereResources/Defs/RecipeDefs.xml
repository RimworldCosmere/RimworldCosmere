<?xml version="1.0" encoding="utf-8"?>

<Defs>
    <RecipeDef Name="Cosmere_Resource_Recipe_AlloyBase" Abstract="true">
        <workAmount>1500</workAmount>
        <workSpeedStat>SmeltingSpeed</workSpeedStat>
        <workSkill>Crafting</workSkill>
        <requiredGiverWorkType>Smithing</requiredGiverWorkType>
        <effectWorking>Smelt</effectWorking>
        <soundWorking>Recipe_Smelt</soundWorking>
        <recipeUsers>
            <li>ElectricSmelter</li>
            <li MayRequire="cryptiklemur.cosmere.scadrial">Cosmere_Scadrial_Table_AllomancyForge</li>
        </recipeUsers>
        <researchPrerequisites>
            <li>Cosmere_Alloys</li>
        </researchPrerequisites>
    </RecipeDef>

    <!-- Coal Recipes -->
    <RecipeDef>
        <defName>Make_CharcoalFromWood</defName>
        <label>Make Charcoal from Wood</label>
        <description>Make charcoal by burning wood.</description>
        <jobString>Burning wood into charcoal.</jobString>
        <effectWorking>Cremate</effectWorking>
        <soundWorking>Recipe_Cremate</soundWorking>
        <workAmount>2000</workAmount>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>WoodLog</li>
                    </thingDefs>
                </filter>
                <count>25</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>WoodLog</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <Charcoal>100</Charcoal>
        </products>
        <recipeUsers>
            <li MayRequire="cryptiklemur.cosmere.scadrial">Cosmere_Scadrial_Table_AllomancyForge</li>
            <li>ElectricSmithy</li>
            <li>FueledSmithy</li>
            <li>Campfire</li>
        </recipeUsers>
    </RecipeDef>
    <RecipeDef>
        <defName>Make_CoalFromStone</defName>
        <label>Make Coal from Stone</label>
        <description>Make a bit of coal by smelting stone.</description>
        <jobString>Smelting stone into coal.</jobString>
        <effectWorking>Cremate</effectWorking>
        <soundWorking>Recipe_Cremate</soundWorking>
        <allowMixingIngredients>true</allowMixingIngredients>
        <workAmount>2800</workAmount>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>StoneBlocks</li>
                    </categories>
                </filter>
                <count>15</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>StoneBlocks</li>
            </categories>
        </fixedIngredientFilter>
        <products>
            <Coal>5</Coal>
        </products>
        <recipeUsers>
            <li MayRequire="cryptiklemur.cosmere.scadrial">Cosmere_Scadrial_Table_AllomancyForge</li>
            <li>ElectricSmithy</li>
            <li>FueledSmithy</li>
        </recipeUsers>
    </RecipeDef>
    <!-- Coal only into chemfuel recipe -->
    <RecipeDef>
        <defName>Make_ChemfuelFromCoalCharcoal</defName>
        <label>Make Chemfuel from Coal/Charcoal</label>
        <description>Make chemfuel by processing coal/charcoal.</description>
        <jobString>Refining chemfuel from coal.</jobString>
        <effectWorking>Cremate</effectWorking>
        <soundWorking>Recipe_Cremate</soundWorking>
        <workAmount>1400</workAmount>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Coal</li>
                        <li>Charcoal</li>
                    </thingDefs>
                </filter>
                <count>60</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Coal</li>
                <li>Charcoal</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <Chemfuel>35</Chemfuel>
        </products>
        <recipeUsers>
            <li>BiofuelRefinery</li>
        </recipeUsers>
    </RecipeDef>
    
    <!-- Glass Recipes -->
    <RecipeDef>
        <defName>MakeGlass</defName>
        <label>Make Glass</label>
        <description>Melt various stone chunks into glass.</description>
        <jobString>Making glass.</jobString>
        <workAmount>1500</workAmount>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <effectWorking>Smith</effectWorking>
        <skillRequirements>
            <Crafting>3</Crafting>
        </skillRequirements>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>StoneChunks</li>
                    </categories>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <Glass>4</Glass>
        </products>
        <fixedIngredientFilter>
            <categories>
                <li>StoneChunks</li>
            </categories>
        </fixedIngredientFilter>
        <researchPrerequisite>Smithing</researchPrerequisite>
        <recipeUsers>
            <li MayRequire="cryptiklemur.cosmere.scadrial">Cosmere_Scadrial_Table_AllomancyForge</li>
            <li>ElectricSmithy</li>
            <li>FueledSmithy</li>
        </recipeUsers>
    </RecipeDef>
</Defs>