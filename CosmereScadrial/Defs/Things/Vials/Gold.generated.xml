<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_Scadrial_Thing_AllomanticVialGold</defName>
        <label>misting vial: augur</label>
        <description>A vial containing Gold suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(206, 172, 55)</color>
        </graphicData>
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Gold</metal>
            </li>
        </modExtensions>
        <orderedTakeGroup>Cosmere_Scadrial_OrderedTakeGroup_AllomanticVialGold</orderedTakeGroup>
    </ThingDef>
    
    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_Scadrial_Recipe_CraftAllomanticVialGold</defName>
        <label>craft misting vial: augur</label>
        <description>Create a vial of Gold infused alcohol for use by Mistborns and augurs.</description>
        <ingredients>
            <li>
                <filter><thingDefs><li>Gold</li></thingDefs></filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <Cosmere_Scadrial_Thing_AllomanticVialGold>8</Cosmere_Scadrial_Thing_AllomanticVialGold>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>Cosmere_Scadrial_OrderedTakeGroup_AllomanticVialGold</defName>
        <label>allomantic vial: gold</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>