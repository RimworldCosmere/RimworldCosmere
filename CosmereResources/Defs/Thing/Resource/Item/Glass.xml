                <Crafting>3</Crafting>
            </skillRequirements>
            <recipeUsers>
                <li>Cosmere_Resources_Table_Forge</li>
                <li>Cosmere_Resources_Table_AlloyMaker</li>
                <li>ElectricSmithy</li>
                <li>FueledSmithy</li>
                <li>Campfire</li>
            </recipeUsers>
            <productCount>4</productCount>
            <defaultIngredientFilter>
