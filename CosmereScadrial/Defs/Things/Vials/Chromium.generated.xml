<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_Scadrial_Thing_AllomanticVialChromium</defName>
        <label>misting vial: leecher</label>
        <description>A vial containing Chromium suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(132, 134, 139)</color>
        </graphicData>
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Chromium</metal>
            </li>
        </modExtensions>
        <orderedTakeGroup>Cosmere_Scadrial_OrderedTakeGroup_AllomanticVialChromium</orderedTakeGroup>
    </ThingDef>

    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_Scadrial_Recipe_CraftAllomanticVialChromium</defName>
        <label>craft misting vial: leecher</label>
        <description>Create a vial of Chromium infused alcohol for use by Mistborns and leechers.</description>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Chromium</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Chromium</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <Cosmere_Scadrial_Thing_AllomanticVialChromium>8</Cosmere_Scadrial_Thing_AllomanticVialChromium>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>Cosmere_Scadrial_OrderedTakeGroup_AllomanticVialChromium</defName>
        <label>allomantic vial: chromium</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>