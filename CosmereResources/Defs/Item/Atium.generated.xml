<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="ResourceBase">
        <defName>Atium</defName>
        <label>Atium</label>
        <description>Atium is the god metal of the Shard Ruin. It grants its user visions of others&#x27; immediate futures, offering immense strategic advantage in combat and prediction.</description>

        <useHitPoints>false</useHitPoints>
        <healthAffectsPrice>false</healthAffectsPrice>
        <tradeability>All</tradeability>
        <stackLimit>150</stackLimit>
        <thingCategories>
            <li>ResourcesRaw</li>
        </thingCategories>
        <burnableByRecipe>false</burnableByRecipe>
        <smeltable>true</smeltable>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <allowedArchonexusCount>80</allowedArchonexusCount>

        <researchPrerequisites>
            <li>Cosmere_God_Metals</li>
        </researchPrerequisites>

        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1</drawSize>
            <texPath>Item/Resource/Atium</texPath>
        </graphicData>

        <stuffProps>
            <commonality>0.0</commonality>
            <color>(60, 60, 60)</color>
            <categories>
                <li>Cosmere_Resources_StuffCategory_Metals</li>
                <li>Cosmere_Resources_StuffCategory_AllomanticMetals</li>
                <li>Metallic</li>
            </categories>
            <appearance>Metal</appearance>
        </stuffProps>

        <statBases>
            <Mass>0.5</Mass>
            <Beauty>100</Beauty>
            <MarketValue>10000</MarketValue>
        </statBases>

        <modExtensions>
            <li Class="CosmereResources.DefModExtension.MetalsLinked">
                <metal>Atium</metal>
            </li>
        </modExtensions>
        <soundInteract>Metal_Drop</soundInteract>
        <soundDrop>Metal_Drop</soundDrop>
    </ThingDef>
</Defs>