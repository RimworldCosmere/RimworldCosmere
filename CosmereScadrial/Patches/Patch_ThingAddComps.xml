<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <!-- Give the ability to get Scadrian Investiture to every pawn -->
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="Human"]/comps</xpath>
        <value>
            <li Class="CosmereScadrial.Comps.Things.Properties.MetalReserves" />
            <li Class="CosmereScadrial.Comps.Things.Properties.MetalBurning" />
        </value>
    </Operation>
</Patch>