<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<RecipeDef Name="AlloyBase" Abstract="true">
		<workAmount>1500</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<recipeUsers>
			<li>ElectricSmelter</li>
			<li MayRequire="mlie.coalexpanded">CoalSmelter</li>
		</recipeUsers>
		<researchPrerequisites>
			<li>Cosmere_Alloys</li>
		</researchPrerequisites>
	</RecipeDef>
	
    <!-- Pewter Alloy Recipe (80% Tin, 20% Copper) -->
    <RecipeDef ParentName="AlloyBase">
        <defName>MakePewter</defName>
        <label>create alloy: pewter</label>
        <jobString>alloying pewter</jobString>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Tin</li>
                    </thingDefs>
                </filter>
                <count>8</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Ind_Copper</li>
                    </thingDefs>
                </filter>
                <count>2</count>
            </li>
        </ingredients>
        <products>
            <Pewter>10</Pewter>
        </products>
    </RecipeDef>

