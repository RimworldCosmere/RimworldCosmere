<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Misting: Bronze -->
    <GeneDef ParentName="AbstractMetallicArtsInvestitureGene">
        <defName>Cosmere_Misting_Bronze</defName>
        
        <label>bronze misting</label>
        <labelShortAdj>seeker</labelShortAdj>
        
        <description>Detects other Allomancers using powers.</description>
        
        <displayCategory>Cosmere_Scadrial_Allomancy</displayCategory>
        <displayOrderInCategory>9</displayOrderInCategory>
        
        <resourceGizmoType>CosmereScadrial.Gizmo.InvestitureAllomancyGizmo</resourceGizmoType>
        <resourceLabel>bronze</resourceLabel>
        <resourceGizmoThresholds>
          <li>0.25</li>
          <li>0.5</li>
          <li>0.75</li>
        </resourceGizmoThresholds>
        <showGizmoOnWorldView>true</showGizmoOnWorldView>
        <showGizmoWhenDrafted>true</showGizmoWhenDrafted>
        <resourceDescription>Bronze is a time-honored alloy, resulting from the fusion of Ind_Copper and tin. Its rich, reddish-brown hue and enduring strength have made bronze a cornerstone of art, architecture, and historical craftsmanship.\n\nDetects other Allomancers using powers.</resourceDescription>
        
        <forcedTraits>
            <li>
                <def>Cosmere_Misting_Bronze</def>
            </li>
        </forcedTraits>
        
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Bronze</metal>
            </li>
        </modExtensions>
        
        <abilities>
            <li>Cosmere_Ability_Bronze_Aura</li>
        </abilities>
        
        <iconPath>UI/Icons/Genes/Investiture/Allomancy/Bronze</iconPath>
    </GeneDef>
    
    <TraitDef ParentName="AbstractMetallicArtsInvestitureTrait">
        <defName>Cosmere_Misting_Bronze</defName>
        <label>seeker</label>
        <description>Detects other Allomancers using powers.</description>
        
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Bronze</metal>
            </li>
        </modExtensions>
        
        <degreeDatas>
            <li>
                <label>misting: seeker</label>
                <description>Detects other Allomancers using powers.</description>
                <degree>0</degree>
                <commonality>0</commonality>
            </li>
        </degreeDatas>
    </TraitDef>
    
