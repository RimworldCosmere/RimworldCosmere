<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <AbilityGroupDef>
        <defName>Cosmere_Scadrial_Brass</defName>
    </AbilityGroupDef>
    <CosmereScadrial.Defs.AllomanticAbilityDef ParentName="AbstractToggleSelfBurnAbility">
        <groupDef>Cosmere_Scadrial_Brass</groupDef>
        <defName>Cosmere_Ability_Brass_Aura</defName>
