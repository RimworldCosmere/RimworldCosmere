<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <HediffDef ParentName="AbstractAllomanticHediff">
        <defName>Cosmere_Hediff_IronAura</defName>
        <label>Burning Iron: Aura</label>
        <description>Reveals nearby sources of metal by tracing fine blue lines through the air.
Each line points toward a metal object — coin, armor, blade — waiting to be pushed.
These lines shimmer with the tension of potential force, visible only to those burning Iron.</description>
        <comps>
            <li Class="CosmereScadrial.Abilities.Allomancy.Hediffs.Comps.PhysicalExternalAuraProperties" />
        </comps>
        <stages>
            <li>
                <multiplyStatChangesBySeverity>true</multiplyStatChangesBySeverity>
                <statFactors>
                    <MeleeCooldownFactor>1.2</MeleeCooldownFactor>
                    <MeleeHitChance>1.2</MeleeHitChance>
                    <MeleeDodgeChance>1.2</MeleeDodgeChance>
                </statFactors>
            </li>
        </stages>
    </HediffDef>
    <CosmereScadrial.Defs.AllomanticAbilityDef ParentName="AbstractTargetHostileBurnAbility">
        <defName>Cosmere_Ability_IronPull</defName>
        <abilityClass>CosmereScadrial.Abilities.Allomancy.IronPull</abilityClass>
        <label>Iron Pull</label>
        <description>By burning iron, the Allomancer projects invisible lines of force toward nearby sources of metal, pulling on them with immense power. A skilled practitioner can hurl weapons from foes’ hands, send enemies tumbling, or launch themselves through the air when braced properly.</description>
        <cooldownTicksRange>
            <min>20</min>
            <max>60</max>
        </cooldownTicksRange>
        <targetWorldCell>true</targetWorldCell>
        <iconPath>UI/Icons/Genes/Investiture/Allomancy/Iron</iconPath>
        <metal>Iron</metal>
        <verbProperties>
            <requireLineOfSight>false</requireLineOfSight>
            <violent>true</violent>
            <noiseRadius>0</noiseRadius>
            <drawAimPie>true</drawAimPie>
            <targetParams>
                <canTargetSelf>false</canTargetSelf>
                <canTargetPawns>false</canTargetPawns>
                <canTargetBuildings>true</canTargetBuildings>
                <canTargetItems>true</canTargetItems>
                <canTargetPlants>false</canTargetPlants>
            </targetParams>
        </verbProperties>
    </CosmereScadrial.Defs.AllomanticAbilityDef>
</Defs>