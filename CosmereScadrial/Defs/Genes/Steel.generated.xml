<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Misting: Steel -->
    <GeneDef ParentName="AbstractMetallicArtsInvestitureGene">
        <defName>Cosmere_Misting_Steel</defName>
        
        <label>steel misting</label>
        <labelShortAdj>coinshot</labelShortAdj>
        
        <description>Can push on metals, allowing rapid movement or throwing metal objects.</description>
        
        <displayCategory>Cosmere_Scadrial_Allomancy</displayCategory>
        <displayOrderInCategory>3</displayOrderInCategory>
        
        <resourceGizmoType>CosmereScadrial.Gizmo.InvestitureAllomancyGizmo</resourceGizmoType>
        <resourceLabel>steel</resourceLabel>
        <resourceGizmoThresholds>
          <li>0.25</li>
          <li>0.5</li>
          <li>0.75</li>
        </resourceGizmoThresholds>
        <showGizmoOnWorldView>true</showGizmoOnWorldView>
        <showGizmoWhenDrafted>true</showGizmoWhenDrafted>
        <resourceDescription>Steel is a durable alloy of iron and carbon, valued for its strength, rigidity, and versatility. Ubiquitous across weaponry, construction, and tools, it forms the foundation of advanced metallurgy.\n\nCan push on metals, allowing rapid movement or throwing metal objects.</resourceDescription>
        
        <forcedTraits>
            <li>
                <def>Cosmere_Misting_Steel</def>
            </li>
        </forcedTraits>
        
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Steel</metal>
            </li>
        </modExtensions>
        
        <abilities>
            <li>Cosmere_Ability_Steel_Aura</li>
            <li>Cosmere_Ability_Steel_Bubble</li>
            <li>Cosmere_Ability_Steel_Push</li>
            <li>Cosmere_Ability_Steel_Coinshot</li>
        </abilities>
        
        <iconPath>UI/Icons/Genes/Investiture/Allomancy/Steel</iconPath>
    </GeneDef>
    
    <TraitDef ParentName="AbstractMetallicArtsInvestitureTrait">
        <defName>Cosmere_Misting_Steel</defName>
        <label>coinshot</label>
        <description>Can push on metals, allowing rapid movement or throwing metal objects.</description>
        
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Steel</metal>
            </li>
        </modExtensions>
        
        <degreeDatas>
            <li>
                <label>misting: coinshot</label>
                <description>Can push on metals, allowing rapid movement or throwing metal objects.</description>
                <degree>0</degree>
                <commonality>0</commonality>
            </li>
        </degreeDatas>
    </TraitDef>
    
