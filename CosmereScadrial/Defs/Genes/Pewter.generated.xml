<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Misting: Pewter -->
    <GeneDef ParentName="AbstractAllomancyInvestitureGene">
        <defName>Cosmere_Misting_Pewter</defName>
        
        <label>pewter misting</label>
        <labelShortAdj>thug</labelShortAdj>
        
        <description>Enhances physical strength and durability, useful in combat.</description>
        
        <displayCategory>Cosmere_Scadrial_Allomancy</displayCategory>
        <displayOrderInCategory>5</displayOrderInCategory>
        
        <resourceLabel>pewter</resourceLabel>
        <resourceDescription>Pewter is a refined alloy formed by blending Tin with Copper. Known for its soft, workable nature and a muted, classic luster, pewter has been a favored material for decorative and utilitarian objects since ancient times.\n\nEnhances physical strength and durability, useful in combat.</resourceDescription>
        
        <forcedTraits>
            <li>
                <def>Cosmere_Misting_Pewter</def>
            </li>
        </forcedTraits>
        
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Pewter</metal>
            </li>
        </modExtensions>
        
        <abilities>
            <li>Cosmere_Ability_Pewter</li>
        </abilities>
        
        <iconPath>UI/Icons/Genes/Investiture/Allomancy/Pewter</iconPath>
    </GeneDef>
    
    <TraitDef ParentName="AbstractMetallicArtsInvestitureTrait">
        <defName>Cosmere_Misting_Pewter</defName>
        <label>thug</label>
        <description>Enhances physical strength and durability, useful in combat.</description>
        
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Pewter</metal>
            </li>
        </modExtensions>
        
        <degreeDatas>
            <li>
                <label>misting: thug</label>
                <description>Enhances physical strength and durability, useful in combat.</description>
                <degree>0</degree>
                <commonality>0</commonality>
            </li>
        </degreeDatas>
    </TraitDef>
    
