        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Bendalloy</metal>
            </li>
        </modExtensions>
        
        <iconPath>UI/Icons/Genes/Investiture/Feruchemy/Bendalloy</iconPath>
    </GeneDef>
    <TraitDef ParentName="AbstractMetallicArtsInvestitureTrait">
        <defName>Cosmere_Ferring_Bendalloy</defName>
        <label>subsumer</label>
        <description>Stores nutrition, allowing users to go without food.</description>
        
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Bendalloy</metal>
            </li>
        </modExtensions>
        
        <degreeDatas>
            <li>
                <label>ferring: subsumer</label>
                <description>Stores nutrition, allowing users to go without food.</description>
                <degree>0</degree>
                <commonality>0</commonality>
            </li>
        </degreeDatas>
    </TraitDef>
</Defs>