        <defName>Cosmere_AllomanticVial_Nicrosil</defName>
        <label>Misting Vial: Nicroburst</label>
        <description>A vial containing Nicrosil suspended in alcohol, used in allomancy.</description>
        <comps>
            <li Class="CosmereScadrial.Comps.Properties.AllomanticVial">
                <metalNames>
                    <li>nicrosil</li>
                </metalNames>
            </li>
        </comps>
        <orderedTakeGroup>AllomanticVial_Nicrosil</orderedTakeGroup>
    </ThingDef>
    
