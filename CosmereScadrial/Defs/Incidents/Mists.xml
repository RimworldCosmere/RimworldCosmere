<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <IncidentDef>
        <defName>Cosmere_Scadrial_Mists</defName>
        <workerClass>CosmereScadrial.Incidents.IncidentWorker_Mists</workerClass>
        <category>Misc</category>
        <letterLabel>The Mists Come</letterLabel>
        <letterText>As darkness falls, the mists swirl across the land. They are not just weather... they are watching.</letterText>
        <letterDef>PositiveEvent</letterDef>
        <targetTags>
            <li>Map_Misc</li>
        </targetTags>
    </IncidentDef>
    
    <HediffDef>
        <defName>Cosmere_Scadrial_MistComa</defName>
        <label>Mist Coma</label>
        <description>This pawn has fallen into a coma after being exposed to the unnatural mists.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <comps>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>180000</disappearsAfterTicks> <!-- 3 days -->
            </li>
        </comps>
        <makesSickThought>true</makesSickThought>
        <stages>
            <li>
                <minSeverity>0</minSeverity>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.1</setMax>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <setMax>0.1</setMax>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <setMax>0.1</setMax>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>
    
    <WeatherDef>
        <defName>Cosmere_Scadrial_MistsWeather</defName>
        <label>dense mists</label>
        <repeatable>true</repeatable>
        <windSpeedFactor>0.5</windSpeedFactor>
        <moveSpeedMultiplier>0.9</moveSpeedMultiplier>
        <ambientSounds>
            <li>Ambience_Fog</li>
        </ambientSounds>
        <overlayClasses>
            <li>WeatherOverlay_Fog</li>
        </overlayClasses>
    </WeatherDef>
</Defs>