<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_AllomanticVial_Chromium</defName>
        <label>misting vial: leecher</label>
        <description>A vial containing Chromium suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(132, 134, 139)</color>
        </graphicData>
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Chromium</metal>
            </li>
        </modExtensions>
        <orderedTakeGroup>AllomanticVial_Chromium</orderedTakeGroup>
    </ThingDef>
    
    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_CraftAllomanticVial_Chromium</defName>
        <label>craft misting vial: leecher</label>
        <description>Create a vial of Chromium infused alcohol for use by Mistborns and leechers.</description>
        <ingredients>
            <li>
                <filter><thingDefs><li>Chromium</li></thingDefs></filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <Cosmere_AllomanticVial_Chromium>8</Cosmere_AllomanticVial_Chromium>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>AllomanticVial_Chromium</defName>
        <label>allomantic vial: chromium</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>