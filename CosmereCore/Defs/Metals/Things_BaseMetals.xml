			<soundImpactBullet>BulletImpact_Metal</soundImpactBullet>
			<soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
			<soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
		</stuffProps>
	</ThingDef>
	
	<!-- Iron (Base Metal) -->
	<ThingDef ParentName="BuildableBaseMetalBase">
		<defName>Iron</defName>
		<label>iron</label>
		<description>Iron is a robust elemental metal, celebrated for its exceptional strength and versatility. Essential in construction, tool-making, and weaponry, iron forms the backbone of many modern and ancient applications.</description>
		<graphicData>
			<texPath>Item/Resource/Iron</texPath>
		</graphicData>
		<statBases>
			<MarketValue>0.4</MarketValue>
			<Mass>0.85</Mass>
			<StuffPower_Armor_Sharp>0.8</StuffPower_Armor_Sharp>
			<StuffPower_Armor_Blunt>0.38</StuffPower_Armor_Blunt>
			<StuffPower_Armor_Heat>0.3</StuffPower_Armor_Heat>
			<StuffPower_Insulation_Cold>0</StuffPower_Insulation_Cold>
			<StuffPower_Insulation_Heat>0</StuffPower_Insulation_Heat>
			<SharpDamageMultiplier>0.8</SharpDamageMultiplier>
			<BluntDamageMultiplier>0.92</BluntDamageMultiplier>
		</statBases>
		<deepCommonality>4</deepCommonality>
		<deepCountPerPortion>75</deepCountPerPortion>
		<deepLumpSizeRange>10~15</deepLumpSizeRange>
		<stuffProps>
			<commonality>0.8</commonality>
			<color>(150,150,150)</color>
			<statFactors>
				<MaxHitPoints>0.6</MaxHitPoints>
				<Beauty>1</Beauty>
				<Flammability>0.3</Flammability>
				<MeleeWeapon_CooldownMultiplier>1.2</MeleeWeapon_CooldownMultiplier>
			</statFactors>
		</stuffProps>
	</ThingDef>

