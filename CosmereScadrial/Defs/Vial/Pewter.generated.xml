<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_AllomanticVial_Pewter</defName>
        <label>misting vial: thug</label>
        <description>A vial containing Pewter suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(141, 151, 166)</color>
        </graphicData>
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Pewter</metal>
            </li>
        </modExtensions>
        <orderedTakeGroup>AllomanticVial_Pewter</orderedTakeGroup>
    </ThingDef>
    
    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_CraftAllomanticVial_Pewter</defName>
        <label>craft misting vial: thug</label>
        <description>Create a vial of Pewter infused alcohol for use by Mistborns and thugs.</description>
        <ingredients>
            <li>
                <filter><thingDefs><li>Pewter</li></thingDefs></filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <Cosmere_AllomanticVial_Pewter>8</Cosmere_AllomanticVial_Pewter>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>AllomanticVial_Pewter</defName>
        <label>allomantic vial: pewter</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>