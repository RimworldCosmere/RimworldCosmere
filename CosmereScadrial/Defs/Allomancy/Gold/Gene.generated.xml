<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Misting: Gold -->
    <GeneDef ParentName="AbstractAllomancyInvestitureGene">
        <defName>Cosmere_Scadrial_Gene_MistingGold</defName>

        <label>gold misting</label>
        <labelShortAdj>augur</labelShortAdj>

        <description>Shows alternate versions of {PAWN}, based on different pasts. Reflecting on these visions will grant a mood buff.</description>

        <displayCategory>Cosmere_Scadrial_Allomancy</displayCategory>
        <displayOrderInCategory>30</displayOrderInCategory>

        <resourceLabel>gold</resourceLabel>
        <resourceDescription>Group: temporal\nAxis: internal\nPolarity: pulling\n\nShows alternate versions of {PAWN}, based on different pasts. Reflecting on these visions will grant a mood buff.</resourceDescription>

        <forcedTraits>
            <li>
                <def>Cosmere_Scadrial_Trait_MistingGold</def>
            </li>
        </forcedTraits>

        <modExtensions>
            <li Class="CosmereResources.DefModExtension.MetalsLinked">
                <metal>Gold</metal>
            </li>
        </modExtensions>

        <abilities>
            <li>Cosmere_Scadrial_Ability_Gold</li>
        </abilities>

        <iconPath>UI/Icons/Genes/Investiture/Allomancy/Gold</iconPath>
    </GeneDef>
</Defs>