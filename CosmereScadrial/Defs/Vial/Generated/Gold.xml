<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_AllomanticVial_Gold</defName>
        <label>misting vial: augur</label>
        <description>A vial containing Gold suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(206, 172, 55)</color>
        </graphicData>
        <modExtensions>
            <li Class="CosmereMetals.ModExtensions.MetalsLinked">
                <metal>Gold</metal>
            </li>
        </modExtensions>
        <orderedTakeGroup>AllomanticVial_Gold</orderedTakeGroup>
    </ThingDef>
    
    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_CraftAllomanticVial_Gold</defName>
        <label>craft misting vial: augur</label>
        <description>Create a vial of Gold infused alcohol for use by Mistborns and augurs.</description>
        <ingredients>
            <li>
                <filter><thingDefs><li>Gold</li></thingDefs></filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <Cosmere_AllomanticVial_Gold>8</Cosmere_AllomanticVial_Gold>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>AllomanticVial_Gold</defName>
        <label>allomantic vial: gold</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>