<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_AllomanticVial_Steel</defName>
        <label>misting vial: coinshot</label>
        <description>A vial containing Steel suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(109, 108, 108)</color>
        </graphicData>
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Steel</metal>
            </li>
        </modExtensions>
        <orderedTakeGroup>AllomanticVial_Steel</orderedTakeGroup>
    </ThingDef>
    
    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_CraftAllomanticVial_Steel</defName>
        <label>craft misting vial: coinshot</label>
        <description>Create a vial of Steel infused alcohol for use by Mistborns and coinshots.</description>
        <ingredients>
            <li>
                <filter><thingDefs><li>Steel</li></thingDefs></filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <Cosmere_AllomanticVial_Steel>8</Cosmere_AllomanticVial_Steel>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>AllomanticVial_Steel</defName>
        <label>allomantic vial: steel</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>