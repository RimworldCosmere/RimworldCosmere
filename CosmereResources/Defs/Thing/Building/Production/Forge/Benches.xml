<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="Cosmere_Resource_BaseWorkbench">
        <defName>Cosmere_Resources_Table_Forge</defName>
        <thingClass>Building_WorkTable_HeatPush</thingClass>
        <label>forge</label>
        <description>A work bench for metalworkers to work on metals and metal related things</description>
        <graphicData>
            <texPath>Things/Building/Production/Forge/Forge</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(4,3)</drawSize>
            <shaderType>CutoutComplex</shaderType>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>

        <castEdgeShadows>true</castEdgeShadows>
        <!--
        <staticSunShadowHeight>0.20</staticSunShadowHeight>-->
        <size>(3, 2)</size>
        
        <stuffCategories>
            <li>Stony</li>
            <li>Metallic</li>
            <li>Woody</li>
        </stuffCategories>
        <costList>
            <WoodLog>50</WoodLog>
        </costList>
        <costStuffCount>75</costStuffCount>
        
        <uiOrder>2300</uiOrder>
        <comps>
            <li Class="CompProperties_Glower">
                <glowRadius>4</glowRadius>
                <glowColor>(255,120,60,0)</glowColor>
                <overlightRadius>2</overlightRadius>
            </li>
            <li Class="CompProperties_Refuelable">
                <fuelFilter>
                    <thingDefs>
                        <li>WoodLog</li>
                        <li>Coal</li>
                        <li>Charcoal</li>
                    </thingDefs>
                </fuelFilter>
                <fuelCapacity>200</fuelCapacity>
                <fuelConsumptionRate>2</fuelConsumptionRate>
                <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
                <initialFuelPercent>0</initialFuelPercent>
                <autoRefuelPercent>0.2</autoRefuelPercent>
                <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
            </li>
            <li Class="CompProperties_HeatPusher">
                <heatPerSecond>6</heatPerSecond>
                <heatPushMaxTemperature>50</heatPushMaxTemperature>
            </li>
        </comps>
        <researchPrerequisites>
            <li>Cosmere_Complex_Alloys</li>
        </researchPrerequisites>
    </ThingDef>
</Defs>