<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Misting: Steel -->
    <GeneDef ParentName="AbstractAllomancyInvestitureGene">
        <defName>Cosmere_Scadrial_Gene_MistingSteel</defName>

        <label>steel misting</label>
        <labelShortAdj>coinshot</labelShortAdj>

        <description>Grants sight to metals around {PAWN} and can push on metals, allowing rapid movement, throwing metal objects, or finding hidden metals.</description>

        <displayCategory>Cosmere_Scadrial_Allomancy</displayCategory>
        <displayOrderInCategory>3</displayOrderInCategory>

        <resourceLabel>steel</resourceLabel>
        <resourceDescription>Group: physical\nAxis: external\nPolarity: pushing\n\nGrants sight to metals around {PAWN} and can push on metals, allowing rapid movement, throwing metal objects, or finding hidden metals.</resourceDescription>

        <forcedTraits>
            <li>
                <def>Cosmere_Scadrial_Trait_MistingSteel</def>
            </li>
        </forcedTraits>

        <modExtensions>
            <li Class="CosmereResources.DefModExtension.MetalsLinked">
                <metal>Steel</metal>
            </li>
        </modExtensions>

            <abilities>
                    <li>Cosmere_Scadrial_Ability_SteelAura</li>
                    <li>Cosmere_Scadrial_Ability_SteelBubble</li>
                    <li>Cosmere_Scadrial_Ability_SteelJump</li>
                    <li>Cosmere_Scadrial_Ability_SteelPush</li>
                    <li>Cosmere_Scadrial_Ability_SteelCoinshot</li>
            </abilities>

        <iconPath>UI/Icons/Genes/Investiture/Allomancy/Steel</iconPath>
    </GeneDef>

    <TraitDef ParentName="AbstractMetallicArtsInvestitureTrait">
        <defName>Cosmere_Scadrial_Trait_MistingSteel</defName>
        <label>coinshot</label>
        <description>Grants sight to metals around {PAWN} and can push on metals, allowing rapid movement, throwing metal objects, or finding hidden metals.</description>

        <modExtensions>
            <li Class="CosmereResources.DefModExtension.MetalsLinked">
                <metal>Steel</metal>
            </li>
        </modExtensions>

        <degreeDatas>
            <li>
                <label>misting: coinshot</label>
                <description>Grants sight to metals around {PAWN} and can push on metals, allowing rapid movement, throwing metal objects, or finding hidden metals.</description>
                <degree>0</degree>
                <commonality>0</commonality>
            </li>
        </degreeDatas>
    </TraitDef>
</Defs>