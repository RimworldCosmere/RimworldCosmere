<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Misting: Gold -->
    <GeneDef ParentName="AbstractInvestitureGene">
        <defName>Cosmere_Misting_Gold</defName>
        <label>gold misting</label>
        <labelShortAdj>augur</labelShortAdj>
        <description>Shows alternate versions of oneself, based on different pasts.</description>
        <displayCategory>Cosmere_Scadrial_Allomancy</displayCategory>
        <displayOrderInCategory>12</displayOrderInCategory>
        <forcedTraits>
            <li>
                <def>Cosmere_Misting_Gold</def>
            </li>
        </forcedTraits>
        <modExtensions>
            <li Class="CosmereCore.ModExtensions.MetalsLinked">
                <metal>Gold</metal>
            </li>
        </modExtensions>
        <iconPath>UI/Icons/Genes/Investiture/Allomancy/Gold</iconPath>
    </GeneDef>
    <TraitDef ParentName="AbstractInvestitureTrait">
        <defName>Cosmere_Misting_Gold</defName>
        <label>augur</label>
        <description>Shows alternate versions of oneself, based on different pasts.</description>
        <modExtensions>
            <li Class="CosmereCore.ModExtensions.MetalsLinked">
                <metal>Gold</metal>
            </li>
        </modExtensions>
        <degreeDatas>
            <li>
                <label>misting: augur</label>
                <description>Shows alternate versions of oneself, based on different pasts.</description>
                <degree>0</degree>
                <commonality>0</commonality>
            </li>
        </degreeDatas>
    </TraitDef>
    
    <!-- Ferring: Gold -->
