<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="CosmereResourceBase">
        <defName>Pewter</defName>
        <label>Pewter</label>
        <description>Pewter is a refined alloy formed by blending Tin with Copper. Known for its soft, workable nature and a muted, classic luster, pewter has been a favored material for decorative and utilitarian objects since ancient times.</description>

        <thingCategories/>
        <researchPrerequisites>
            <li>Cosmere_Simple_Alloys</li>
            <li>Cosmere_Complex_Alloys</li>
        </researchPrerequisites>
        <costList>
        </costList>

        <recipeMaker>
            <workAmount>1500</workAmount>
            <workSpeedStat>SmeltingSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <requiredGiverWorkType>Smithing</requiredGiverWorkType>
            <effectWorking>Smelt</effectWorking>
            <productCount>10</productCount>
            <soundWorking>Recipe_Smelt</soundWorking>
            <researchPrerequisites>
                <li>Cosmere_Simple_Alloys</li>
            </researchPrerequisites>
            <recipeUsers>
                <li>ElectricSmelter</li>
                <li MayRequire="cryptiklemur.cosmere.scadrial">Cosmere_Scadrial_Table_Forge</li>
            </recipeUsers>
            <displayPriority>200</displayPriority>
        </recipeMaker>

        <graphicData>
            <drawSize>1</drawSize>
            <texPath>Item/Resource/Pewter</texPath>
        </graphicData>

        <stuffProps>
            <commonality>0.0</commonality>
            <color>(141, 151, 166)</color>
            <categories>
                <li>Cosmere_Resources_StuffCategory_Metals</li>
                <li>Cosmere_Resources_StuffCategory_AllomanticMetals</li>
                <li>Metallic</li>
            </categories>
            <appearance>Metal</appearance>
        </stuffProps>

        <statBases>
            <Beauty>1</Beauty>
            <MarketValue>1.9</MarketValue>
        </statBases>

        <modExtensions>
            <li Class="CosmereResources.DefModExtension.MetalsLinked">
                <metal>Pewter</metal>
            </li>
        </modExtensions>
        <comps>
        </comps>
        <soundInteract>Metal_Drop</soundInteract>
        <soundDrop>Metal_Drop</soundDrop>
    </ThingDef>
</Defs>