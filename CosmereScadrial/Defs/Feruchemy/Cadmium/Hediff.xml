<Defs>
    <HediffDef ParentName="Cosmere_Scadrial_Hediff_AbstractCompoundHediff">
        <defName>Cosmere_Scadrial_Hediff_CompoundCadmium</defName>
        <label>compounding cadmium</label>
        <description>Rapidly stores breath by burning a cadmium metalmind.</description>
        <modExtensions>
            <li Class="CosmereResources.DefModExtension.MetalsLinked">
                <metal>Cadmium</metal>
            </li>
        </modExtensions>
    </HediffDef>
