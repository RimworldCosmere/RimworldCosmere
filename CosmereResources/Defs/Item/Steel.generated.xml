<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="CosmereResourceBase">
        <defName>Steel</defName>
        <label>Steel</label>
        <description>Steel is a durable alloy of iron and carbon, valued for its strength, rigidity, and versatility. Ubiquitous across weaponry, construction, and tools, it forms the foundation of advanced metallurgy.</description>

        <thingCategories/>
        <researchPrerequisites>
            <li>Cosmere_Simple_Alloys</li>
            <li>Cosmere_Complex_Alloys</li>
        </researchPrerequisites>
        <costList>
            <Iron>8</Iron>
            
            <Charcoal>2</Charcoal>
            
        </costList>

        <recipeMaker>
            <workAmount>1500</workAmount>
            <workSpeedStat>SmeltingSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <requiredGiverWorkType>Smithing</requiredGiverWorkType>
            <effectWorking>Smelt</effectWorking>
            <productCount>10</productCount>
            <soundWorking>Recipe_Smelt</soundWorking>
            <researchPrerequisites>
                <li>Cosmere_Simple_Alloys</li>
            </researchPrerequisites>
            <recipeUsers>
                <li>ElectricSmelter</li>
                <li MayRequire="cryptiklemur.cosmere.scadrial">Cosmere_Scadrial_Table_Forge</li>
            </recipeUsers>
            <displayPriority>200</displayPriority>
        </recipeMaker>

        <graphicData>
            <drawSize>1</drawSize>
            <texPath>Item/Resource/Steel</texPath>
        </graphicData>

        <stuffProps>
            <commonality>0.8</commonality>
            <color>(109, 108, 108)</color>
            <constructEffect>ConstructMetal</constructEffect>
            <soundImpactBullet>BulletImpact_Metal</soundImpactBullet>
            <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
            <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
            <canSuggestUseDefaultStuff>true</canSuggestUseDefaultStuff>
            <categories>
                <li>Cosmere_Resources_StuffCategory_Metals</li>
                <li>Cosmere_Resources_StuffCategory_AllomanticMetals</li>
                <li>Metallic</li>
            </categories>
            <appearance>Metal</appearance>
        </stuffProps>

        <statBases>
            <Beauty>1</Beauty>
            <MarketValue>1.9</MarketValue>
        </statBases>

        <modExtensions>
            <li Class="CosmereResources.DefModExtension.MetalsLinked">
                <metal>Steel</metal>
            </li>
        </modExtensions>
        <comps>
        </comps>
        <soundInteract>Metal_Drop</soundInteract>
        <soundDrop>Metal_Drop</soundDrop>
    </ThingDef>
</Defs>