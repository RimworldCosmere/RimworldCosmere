<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_Scadrial_Thing_AllomanticVialAtium</defName>
        <label>misting vial: seer</label>
        <description>A vial containing Atium suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(0, 0, 0)</color>
        </graphicData>
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Atium</metal>
            </li>
        </modExtensions>
        <orderedTakeGroup>Cosmere_Scadrial_OrderedTakeGroup_AllomanticVialAtium</orderedTakeGroup>
    </ThingDef>
    
    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_Scadrial_Recipe_CraftAllomanticVialAtium</defName>
        <label>craft misting vial: seer</label>
        <description>Create a vial of Atium infused alcohol for use by Mistborns and seers.</description>
        <ingredients>
            <li>
                <filter><thingDefs><li>Atium</li></thingDefs></filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <Cosmere_Scadrial_Thing_AllomanticVialAtium>8</Cosmere_Scadrial_Thing_AllomanticVialAtium>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>Cosmere_Scadrial_OrderedTakeGroup_AllomanticVialAtium</defName>
        <label>allomantic vial: atium</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>