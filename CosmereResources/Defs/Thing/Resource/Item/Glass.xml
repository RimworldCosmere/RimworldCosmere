        <statBases>
            <MaxHitPoints>20</MaxHitPoints>
            <MarketValue>10</MarketValue>
            <Mass>3.5</Mass>
        </statBases>
        <thingCategories Inherit="False">
            <li>Manufactured</li>
        </thingCategories>
        <stuffProps>
            <stuffAdjective>glass</stuffAdjective>
            <categories>
                <li>Cosmere_Resource_StuffCategory_Glass</li>
            </categories>
            <color>(220,220,240)</color>
