<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Misting: Iron -->
    <GeneDef ParentName="AbstractAllomancyInvestitureGene">
        <defName>Cosmere_Misting_Iron</defName>
        
        <label>iron misting</label>
        <labelShortAdj>lurcher</labelShortAdj>
        
        <description>Grants sight to metals around {PAWN} and can pull on metals. Useful for drawing weapons or finding hidden metals.</description>
        
        <displayCategory>Cosmere_Scadrial_Allomancy</displayCategory>
        <displayOrderInCategory>2</displayOrderInCategory>
        
        <resourceLabel>iron</resourceLabel>
        <resourceDescription>Group: physical\nAxis: external\nPolarity: pulling\n\nGrants sight to metals around {PAWN} and can pull on metals. Useful for drawing weapons or finding hidden metals.</resourceDescription>
        
        <forcedTraits>
            <li>
                <def>Cosmere_Misting_Iron</def>
            </li>
        </forcedTraits>
        
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Iron</metal>
            </li>
        </modExtensions>
        
        <abilities>
            <li>Cosmere_Ability_Iron_Aura</li>
            <li>Cosmere_Ability_Iron_Pull</li>
        </abilities>
        
        <iconPath>UI/Icons/Genes/Investiture/Allomancy/Iron</iconPath>
    </GeneDef>
    
    <TraitDef ParentName="AbstractMetallicArtsInvestitureTrait">
        <defName>Cosmere_Misting_Iron</defName>
        <label>lurcher</label>
        <description>Grants sight to metals around {PAWN} and can pull on metals. Useful for drawing weapons or finding hidden metals.</description>
        
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Iron</metal>
            </li>
        </modExtensions>
        
        <degreeDatas>
            <li>
                <label>misting: lurcher</label>
                <description>Grants sight to metals around {PAWN} and can pull on metals. Useful for drawing weapons or finding hidden metals.</description>
                <degree>0</degree>
                <commonality>0</commonality>
            </li>
        </degreeDatas>
    </TraitDef>
    
