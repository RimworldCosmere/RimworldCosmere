<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationSequence">
    <operations>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName = "Trellium"]</xpath>
        <value>
            <thingClass>CosmereScadrial.Things.AllomanticMetal</thingClass>
            <ingestible>
                <preferability>NeverForNutrition</preferability>
                <maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
                <defaultNumToIngestAtOnce>1</defaultNumToIngestAtOnce>
                <chairSearchRadius>0</chairSearchRadius>
                <ingestSound>Ingest_Pill</ingestSound>
                <baseIngestTicks>10</baseIngestTicks>
                <drugCategory>None</drugCategory>
                <foodType>Fluid</foodType>
                <ingestCommandString>Ingest Trellium</ingestCommandString>
                <ingestReportString>ingesting Trellium</ingestReportString>
            </ingestible>
        </value>
      </li>
    </operations>
  </Operation>
</Patch>