<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_AllomanticVial_Pewter</defName>
        <label>Misting Vial: Thug</label>
        <description>A vial containing Pewter suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(141, 151, 166)</color>
            <colorTwo>(141, 151, 166)</colorTwo>
        </graphicData>
        <comps>
            <li Class="CosmereScadrial.Comps.Things.Properties.AllomanticVial">
                <metals>
                    <li>Pewter</li>
                </metals>
            </li>
        </comps>
        <orderedTakeGroup>AllomanticVial_Pewter</orderedTakeGroup>
    </ThingDef>
    
