        <groupDef>Cosmere_Scadrial_Brass</groupDef>
        <defName>Cosmere_Ability_Brass_Target</defName>
        <label>soothe target</label>
        <description>Suppress emotional outburst and calm the mind of a target Brass. Has a chance to break mental states.</description>
        <metal>Brass</metal>
        <hediff>Cosmere_Hediff_Soothed</hediff>
        <hediffSeverityFactor>2</hediffSeverityFactor>
        <verbProperties>
            <targetParams>
                <canTargetItems>false</canTargetItems>
                <canTargetBuildings>false</canTargetBuildings>
                <canTargetMechs>false</canTargetMechs>
                <canTargetPlants>false</canTargetPlants>
