<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_AllomanticVial_Brass</defName>
        <label>Misting Vial: Soother</label>
        <description>A vial containing Brass suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(175, 148, 91)</color>
            <colorTwo>(175, 148, 91)</colorTwo>
        </graphicData>
        <comps>
            <li Class="CosmereScadrial.Comps.Things.Properties.AllomanticVial">
                <metals>
                    <li>Brass</li>
                </metals>
            </li>
        </comps>
        <modExtensions>
            <li Class="CosmereCore.ModExtensions.MetalsLinked">
                <metals>
                    <li>Brass</li>
                </metals>
            </li>
        </modExtensions>
        <orderedTakeGroup>AllomanticVial_Brass</orderedTakeGroup>
    </ThingDef>
    
    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_CraftAllomanticVial_Brass</defName>
        <label>Craft Misting Vial: Soother</label>
        <description>Create a vial of Brass infused alcohol for use by Mistborns and soothers.</description>
        <ingredients>
            <li>
                <filter><thingDefs><li>Brass</li></thingDefs></filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <Cosmere_AllomanticVial_Brass>8</Cosmere_AllomanticVial_Brass>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>AllomanticVial_Brass</defName>
        <label>Allomantic Vial: Brass</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>