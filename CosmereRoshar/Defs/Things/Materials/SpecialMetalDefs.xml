    <!-- ALLOYS -->
    <!-- Pewter -->
    <!-- 	a_pewter: tin88 + antinomy10 + copper2  -->
    <RecipeDef ParentName="Cosmere_Roshar_MakeAlloyBase">
        <defName>Cosmere_Roshar_Make_AlloyPewter</defName>
        <label>make Pewter Alloy</label>
        <description>make Pewter alloy out of antimony and copper.</description>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Cosmere_Roshar_RawTin</li>
                    </thingDefs>
                </filter>
                <count>8</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Cosmere_Roshar_RawAntimony</li>
                    </thingDefs>
                </filter>
                <count>2</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Cosmere_Roshar_RawCopper</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Cosmere_Roshar_RawAntimony</li>
                <li>Cosmere_Roshar_RawCopper</li>
                <li>Cosmere_Roshar_RawTin</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <Cosmere_Roshar_AlloyPewter>10</Cosmere_Roshar_AlloyPewter>
        </products>
        <researchPrerequisites>
            <li>Cosmere_Roshar_Research_Alloys</li>
        </researchPrerequisites>
    </RecipeDef>
