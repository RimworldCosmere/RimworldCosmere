<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="AbstractAllomanticVial">
    <defName>Cosmere_AllomanticVial_Aluminum</defName>
    <label>Aluminum Vial</label>
    <description>A vial containing Aluminum suspended in alcohol, used in allomancy.</description>
    <comps>
      <li Class="CosmereScadrial.CompProperties.CompProperties_AllomanticVial">
        <metalNames>
          <li>aluminum</li>
        </metalNames>
      </li>
    </comps>
  </ThingDef>
  <RecipeDef ParentName="AbstractCraftAllomanticVial">
    <defName>Cosmere_CraftAllomanticVial_Aluminum</defName>
    <label>Craft Allomantic Vial (Aluminum)</label>
    <description>Create a vial of Aluminum infused alcohol for use by Mistborns and gnat (aluminum)s.</description>
    <ingredients>
      <li>
        <filter><thingDefs><li>Ind_Aluminium</li></thingDefs></filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <Cosmere_AllomanticVial_Aluminum>1</Cosmere_AllomanticVial_Aluminum>
    </products>
  </RecipeDef>
</Defs>