<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_Scadrial_Thing_AllomanticVialIron</defName>
        <label>misting vial: lurcher</label>
        <description>A vial containing Iron suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(121, 113, 111)</color>
        </graphicData>
        <modExtensions>
            <li Class="CosmereResources.DefModExtension.MetalsLinked">
                <metal>Iron</metal>
            </li>
        </modExtensions>
        <orderedTakeGroup>Cosmere_Scadrial_OrderedTakeGroup_AllomanticVialIron</orderedTakeGroup>
    </ThingDef>

    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_Scadrial_Recipe_CraftAllomanticVialIron</defName>
        <label>craft misting vial: lurcher</label>
        <description>Create a vial of Iron infused alcohol for use by Mistborns and lurchers.</description>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Iron</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Iron</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <Cosmere_Scadrial_Thing_AllomanticVialIron>8</Cosmere_Scadrial_Thing_AllomanticVialIron>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>Cosmere_Scadrial_OrderedTakeGroup_AllomanticVialIron</defName>
        <label>allomantic vial: iron</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>