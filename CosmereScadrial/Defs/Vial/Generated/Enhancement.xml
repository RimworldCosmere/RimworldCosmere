<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="AbstractAllomanticVial">
    <defName>Cosmere_AllomanticVial_Enhancement</defName>
    <label>Mistborn Vial: Enhancement</label>
    <description>A vial containing multiple metals suspended in alcohol, used in allomancy.</description>
    <comps>
      <li Class="CosmereScadrial.CompProperties.CompProperties_AllomanticVial">
        <metalNames>
          <li>aluminum</li>
          <li>duralumin</li>
          <li>chromium</li>
          <li>nicrosil</li>
        </metalNames>
      </li>
    </comps>
  </ThingDef>
  <RecipeDef ParentName="AbstractCraftAllomanticVial">
    <defName>Cosmere_CraftAllomanticVial_Enhancement</defName>
    <label>Craft Mistborn Vial: Enhancement</label>
    <description>Create a vial of multiple metals suspended in alcohol for use by Mistborns.</description>
    <ingredients>
      <li>
        <filter><thingDefs><li>Ind_Aluminium</li></thingDefs></filter>
        <count>1</count>
      </li>
      <li>
        <filter><thingDefs><li>Duralumin</li></thingDefs></filter>
        <count>1</count>
      </li>
      <li>
        <filter><thingDefs><li>Chromium</li></thingDefs></filter>
        <count>1</count>
      </li>
      <li>
        <filter><thingDefs><li>Nicrosil</li></thingDefs></filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <Cosmere_AllomanticVial_Enhancement>8</Cosmere_AllomanticVial_Enhancement>
    </products>
  </RecipeDef>
</Defs>