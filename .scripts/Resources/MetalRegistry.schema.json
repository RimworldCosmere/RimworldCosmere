{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "godMetal": {
        "type": "boolean"
      },
      "color": {
        "type": "array",
        "items": {
          "type": "integer"
        }
      },
      "colorTwo": {
        "type": "array",
        "items": {
          "type": "integer"
        }
      },
      "allomancy": {
        "type": [
          "object",
          "null"
        ],
        "properties": {
          "userName": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "group": {
            "type": "string",
            "enum": [
              "physical",
              "mental",
              "enhancement",
              "temporal"
            ]
          },
          "axis": {
            "type": "string",
            "enum": [
              "external",
              "internal"
            ]
          },
          "polarity": {
            "type": "string",
            "enum": [
              "pulling",
              "pushing"
            ]
          },
          "abilities": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "description"
        ]
      },
      "feruchemy": {
        "type": [
          "object",
          "null"
        ],
        "properties": {
          "userName": {
            "type": "string"
          },
          "group": {
            "type": "string",
            "enum": [
              "physical",
              "cognitive",
              "spiritual",
              "hybrid"
            ]
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "description"
        ]
      },
      "buildable": {
        "type": "object",
        "properties": {
          "buildings": {
            "type": "boolean"
          },
          "items": {
            "type": "boolean"
          },
          "commonality": {
            "type": "number"
          }
        },
        "required": [
          "buildings",
          "items"
        ]
      },
      "mining": {
        "type": "object",
        "properties": {
          "hitPoints": {
            "type": "integer"
          },
          "yield": {
            "type": "integer"
          },
          "commonality": {
            "type": "number"
          },
          "sizeRange": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          }
        },
        "required": [
          "hitPoints",
          "yield",
          "commonality",
          "sizeRange"
        ]
      },
      "alloy": {
        "type": "object",
        "properties": {
          "ingredients": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "item": {
                  "type": [
                    "array",
                    "string"
                  ],
                  "items": {
                    "type": "string"
                  }
                },
                "count": {
                  "type": "integer"
                }
              },
              "required": [
                "item",
                "count"
              ]
            }
          },
          "products": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "count": {
                  "type": "integer"
                }
              },
              "required": [
                "count"
              ]
            }
          }
        },
        "required": [
          "ingredients"
        ]
      },
      "disabled": {
        "type": "boolean"
      }
    },
    "required": [
      "name",
      "description",
      "godMetal",
      "color"
    ]
  }
}