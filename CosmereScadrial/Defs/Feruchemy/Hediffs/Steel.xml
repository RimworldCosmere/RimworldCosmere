                    <InjuryHealingFactor>2.0</InjuryHealingFactor>
                    <RestFallRateFactor>2.0</RestFallRateFactor>
                    <RestRateMultiplier>2.0</RestRateMultiplier>
                    <EatingSpeed>2.0</EatingSpeed>
                    <MeleeCooldownFactor>2.0</MeleeCooldownFactor>
