        <ingredients>
            <li>
                <filter><thingDefs><li>Nicrosil</li></thingDefs></filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <Cosmere_AllomanticVial_Nicrosil>8</Cosmere_AllomanticVial_Nicrosil>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>AllomanticVial_Nicrosil</defName>
        <label>Allomantic Vial: Nicrosil</label>
        <max>20</max>
    </OrderedTakeGroupDef>
