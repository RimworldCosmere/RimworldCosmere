<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <HediffDef ParentName="Cosmere_Scadrial_Hediff_AbstractCompoundHediff">
        <defName>Cosmere_Scadrial_Hediff_CompoundChromium</defName>
        <label>compounding chromium</label>
        <description>Rapidly stores fortune by burning a chromium metalmind.</description>
        <modExtensions>
            <li Class="CosmereResources.DefModExtension.MetalsLinked">
                <metal>Chromium</metal>
            </li>
        </modExtensions>
    </HediffDef>
    <HediffDef ParentName="Cosmere_Scadrial_Hediff_FeruchemyBase">
        <defName>Cosmere_Scadrial_Hediff_StoreChromium</defName>
        <label>storing chromium</label>
        <description>This pawn is storing fortune in a chromium metalmind. Chance turns against them — shots miss, tasks fail, and random events tend to break poorly. They seem cursed, but the bad luck is bottled for future use.</description>
        <stages>
            <li>
                <multiplyStatChangesBySeverity>true</multiplyStatChangesBySeverity>
                <statFactors>
                    <MedicalSurgerySuccessChance>0.8</MedicalSurgerySuccessChance>
                    <Ability_DetectChancePerEntropy>0.8</Ability_DetectChancePerEntropy>
                    <MeleeHitChance>0.8</MeleeHitChance>
                    <MeleeDodgeChance>0.8</MeleeDodgeChance>
                    <PawnTrapSpringChance>0.8</PawnTrapSpringChance>
                    <ArrestSuccessChance>0.8</ArrestSuccessChance>
                    <TameAnimalChance>0.8</TameAnimalChance>
                    <TrainAnimalChance>0.8</TrainAnimalChance>
                    <BondAnimalChanceFactor>0.8</BondAnimalChanceFactor>
                    <PlantHarvestYield>0.8</PlantHarvestYield>
                    <DrugHarvestYield>0.8</DrugHarvestYield>
                    <HuntingStealth>0.8</HuntingStealth>
                    <ConstructSuccessChance>0.8</ConstructSuccessChance>
                    <FixBrokenDownBuildingSuccessChance>0.8</FixBrokenDownBuildingSuccessChance>
                    <FoodPoisonChance>1.2</FoodPoisonChance>
                    <ShootingAccuracyPawn>0.8</ShootingAccuracyPawn>
                    <TradePriceImprovement>0.8</TradePriceImprovement>
                </statFactors>
            </li>
        </stages>
        <modExtensions>
            <li Class="CosmereResources.DefModExtension.MetalsLinked">
                <metal>Chromium</metal>
            </li>
        </modExtensions>
    </HediffDef>
<HediffDef ParentName="Cosmere_Scadrial_Hediff_FeruchemyBase">
        <defName>Cosmere_Scadrial_Hediff_TapChromium</defName>
        <label>tapping chromium</label>
        <description>This pawn is tapping a chromium metalmind, drawing on stored fortune to twist chance in their favor. They dodge danger, succeed unexpectedly, and enjoy improbable good luck. Nothing’s guaranteed — but odds are tilted in their favor.</description>
        <stages>
            <li>
                <multiplyStatChangesBySeverity>true</multiplyStatChangesBySeverity>
                <statFactors>
                    <MedicalSurgerySuccessChance>1.2</MedicalSurgerySuccessChance>
                    <Ability_DetectChancePerEntropy>1.2</Ability_DetectChancePerEntropy>
                    <MeleeHitChance>1.2</MeleeHitChance>
                    <MeleeDodgeChance>1.2</MeleeDodgeChance>
                    <PawnTrapSpringChance>1.2</PawnTrapSpringChance>
                    <ArrestSuccessChance>1.2</ArrestSuccessChance>
                    <TameAnimalChance>1.2</TameAnimalChance>
                    <TrainAnimalChance>1.2</TrainAnimalChance>
                    <BondAnimalChanceFactor>1.2</BondAnimalChanceFactor>
                    <PlantHarvestYield>1.2</PlantHarvestYield>
                    <DrugHarvestYield>1.2</DrugHarvestYield>
                    <HuntingStealth>1.2</HuntingStealth>
                    <ConstructSuccessChance>1.2</ConstructSuccessChance>
                    <FixBrokenDownBuildingSuccessChance>1.2</FixBrokenDownBuildingSuccessChance>
                    <FoodPoisonChance>0.8</FoodPoisonChance>
                    <ShootingAccuracyPawn>1.2</ShootingAccuracyPawn>
                    <TradePriceImprovement>1.2</TradePriceImprovement>
                </statFactors>
            </li>
        </stages>
        <modExtensions>
            <li Class="CosmereResources.DefModExtension.MetalsLinked">
                <metal>Chromium</metal>
            </li>
        </modExtensions>
    </HediffDef>
</Defs>