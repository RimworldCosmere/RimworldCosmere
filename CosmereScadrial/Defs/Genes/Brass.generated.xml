<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Misting: Brass -->
    <GeneDef ParentName="AbstractInvestitureGene">
        <defName>Cosmere_Misting_Brass</defName>
        <label>brass misting</label>
        <labelShortAdj>soother</labelShortAdj>
        <description>Can soothe emotions, calming people or manipulating moods.</description>
        <displayCategory>Cosmere_Scadrial_Allomancy</displayCategory>
        <displayOrderInCategory>7</displayOrderInCategory>
        <forcedTraits>
            <li>
                <def>Cosmere_Misting_Brass</def>
            </li>
        </forcedTraits>
        <modExtensions>
            <li Class="CosmereMetals.ModExtensions.MetalsLinked">
                <metal>Brass</metal>
            </li>
        </modExtensions>
        <abilities>
            <li>Cosmere_Ability_Brass_Aura</li>
            <li>Cosmere_Ability_Brass_Target</li>
        </abilities>
        <iconPath>UI/Icons/Genes/Investiture/Allomancy/Brass</iconPath>
    </GeneDef>
    <TraitDef ParentName="AbstractInvestitureTrait">
        <defName>Cosmere_Misting_Brass</defName>
        <label>soother</label>
        <description>Can soothe emotions, calming people or manipulating moods.</description>
        <modExtensions>
            <li Class="CosmereMetals.ModExtensions.MetalsLinked">
                <metal>Brass</metal>
            </li>
        </modExtensions>
        <degreeDatas>
            <li>
                <label>misting: soother</label>
                <description>Can soothe emotions, calming people or manipulating moods.</description>
                <degree>0</degree>
                <commonality>0</commonality>
            </li>
        </degreeDatas>
    </TraitDef>
    
