<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_Scadrial_Thing_AllomanticVialTin</defName>
        <label>misting vial: tineye</label>
        <description>A vial containing Tin suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(197, 202, 201)</color>
        </graphicData>
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Tin</metal>
            </li>
        </modExtensions>
        <orderedTakeGroup>Cosmere_Scadrial_OrderedTakeGroup_AllomanticVialTin</orderedTakeGroup>
    </ThingDef>

    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_Scadrial_Recipe_CraftAllomanticVialTin</defName>
        <label>craft misting vial: tineye</label>
        <description>Create a vial of Tin infused alcohol for use by Mistborns and tineyes.</description>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Tin</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Tin</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <Cosmere_Scadrial_Thing_AllomanticVialTin>8</Cosmere_Scadrial_Thing_AllomanticVialTin>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>Cosmere_Scadrial_OrderedTakeGroup_AllomanticVialTin</defName>
        <label>allomantic vial: tin</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>