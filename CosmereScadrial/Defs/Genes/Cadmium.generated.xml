<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Misting: Cadmium -->
    <GeneDef ParentName="AbstractMetallicArtsInvestitureGene">
        <defName>Cosmere_Misting_Cadmium</defName>
        
        <label>cadmium misting</label>
        <labelShortAdj>pulser</labelShortAdj>
        
        <description>Slows down time in a bubble, creating a temporal distortion.</description>
        
        <displayCategory>Cosmere_Scadrial_Allomancy</displayCategory>
        <displayOrderInCategory>14</displayOrderInCategory>
        
        <resourceGizmoType>CosmereScadrial.Gizmo.InvestitureAllomancyGizmo</resourceGizmoType>
        <resourceLabel>cadmium</resourceLabel>
        <resourceGizmoThresholds>
          <li>0.25</li>
          <li>0.5</li>
          <li>0.75</li>
        </resourceGizmoThresholds>
        <showGizmoOnWorldView>true</showGizmoOnWorldView>
        <showGizmoWhenDrafted>true</showGizmoWhenDrafted>
        <resourceDescription>Cadmium is a soft, subtly reflective metal known for its unique properties and low melting point. Often used in specialized applications, it brings distinct qualities when blended into advanced alloys.\n\nSlows down time in a bubble, creating a temporal distortion.</resourceDescription>
        
        <forcedTraits>
            <li>
                <def>Cosmere_Misting_Cadmium</def>
            </li>
        </forcedTraits>
        
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Cadmium</metal>
            </li>
        </modExtensions>
        
        <abilities>
            <li>Cosmere_Ability_Cadmium</li>
        </abilities>
        
        <iconPath>UI/Icons/Genes/Investiture/Allomancy/Cadmium</iconPath>
    </GeneDef>
    
    <TraitDef ParentName="AbstractMetallicArtsInvestitureTrait">
        <defName>Cosmere_Misting_Cadmium</defName>
        <label>pulser</label>
        <description>Slows down time in a bubble, creating a temporal distortion.</description>
        
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Cadmium</metal>
            </li>
        </modExtensions>
        
        <degreeDatas>
            <li>
                <label>misting: pulser</label>
                <description>Slows down time in a bubble, creating a temporal distortion.</description>
                <degree>0</degree>
                <commonality>0</commonality>
            </li>
        </degreeDatas>
    </TraitDef>
    
