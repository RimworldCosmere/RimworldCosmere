<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_Scadrial_Thing_AllomanticVialBendalloy</defName>
        <label>misting vial: slider</label>
        <description>A vial containing Bendalloy suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(117, 144, 108)</color>
        </graphicData>
        <modExtensions>
            <li Class="CosmereResources.DefModExtension.MetalsLinked">
                <metal>Bendalloy</metal>
            </li>
        </modExtensions>
        <orderedTakeGroup>Cosmere_Scadrial_OrderedTakeGroup_AllomanticVialBendalloy</orderedTakeGroup>
    </ThingDef>

    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_Scadrial_Recipe_CraftAllomanticVialBendalloy</defName>
        <label>craft misting vial: slider</label>
        <description>Create a vial of Bendalloy infused alcohol for use by Mistborns and sliders.</description>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Bendalloy</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Bendalloy</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <Cosmere_Scadrial_Thing_AllomanticVialBendalloy>8</Cosmere_Scadrial_Thing_AllomanticVialBendalloy>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>Cosmere_Scadrial_OrderedTakeGroup_AllomanticVialBendalloy</defName>
        <label>allomantic vial: bendalloy</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>