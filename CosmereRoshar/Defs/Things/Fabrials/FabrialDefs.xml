  <RecipeDef
    Name="Cosmere_Roshar_MakeApparelFabrialBase" Abstract="True">
    <jobString>making fabrial.</jobString>
    <workAmount>1600</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>CutStone</effectWorking>
    <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
    <targetCountAdjustment>1</targetCountAdjustment>
    <workSkill>Crafting</workSkill>
    <workSkillLearnFactor>0</workSkillLearnFactor>
    <recipeUsers>
      <li>Cosmere_Roshar_TableFabrials</li>
    </recipeUsers>
  </RecipeDef>


  <RecipeDef ParentName="Cosmere_Roshar_MakeApparelFabrialBase">
    <defName>Cosmere_Roshar_Make_Apparel_Fabrial_Painrial_Diminisher</defName>
    <label>make wearable Painrial Diminisher</label>
    <description>Crafts a Painrial Diminisher using tin and a gemstone holding a Pain spren.</description>
    <products>
      <Cosmere_Roshar_Apparel_Fabrial_Painrial_Diminisher>1</Cosmere_Roshar_Apparel_Fabrial_Painrial_Diminisher>
    </products>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Cosmere_Roshar_CutEmerald</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Cosmere_Roshar_RawTin</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Cosmere_Roshar_CutEmerald</li>
        <li>Cosmere_Roshar_RawTin</li>
      </thingDefs>
    </fixedIngredientFilter>
    <researchPrerequisites>
      <li>Cosmere_Roshar_Research_AdvancedArtifabriary</li>
    </researchPrerequisites>
    <recipeUsers>
      <li>Cosmere_Roshar_TableFabrials</li>
    </recipeUsers>
  </RecipeDef>

