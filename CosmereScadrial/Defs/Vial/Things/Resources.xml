<?xml version="1.0" encoding="utf-8"?>
<Defs>	
	<ThingDef ParentName="DrugBase">
		<defName>Cosmere_AllomanticVial</defName>
		<label>allomantic vial</label>
		<description>A vial of metal shavings suspended in alcohol, used by allomancers to ingest and burn metals.</description>
		<thingClass>ThingWithComps</thingClass>
		<graphicData>
			<texPath>Things/Item/Vial/AllomanticVial</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1,1)</drawSize>
		</graphicData>
		<ingestible>
			<foodType>Fluid</foodType>
			<ingestSound>Ingest_Drink</ingestSound>
			<ingestCommandString>Drink vial</ingestCommandString>
			<ingestReportString>drinks an allomantic vial</ingestReportString>
			<ingestEffect>EatMeat</ingestEffect> <!-- Replace if you have custom FX -->
			<baseIngestTicks>60</baseIngestTicks>
			<drugCategory>None</drugCategory>
		</ingestible>
		<comps>
			<li Class="CosmereScadrial.CompProperties.CompProperties_AllomanticVial" />
		</comps>
		<statBases>
			<Mass>0.1</Mass>
			<MarketValue>8</MarketValue>
		</statBases>
		<stackLimit>10</stackLimit>
		<tradeTags>
			<li>Drug</li>
		</tradeTags>
	</ThingDef>
</Defs>	