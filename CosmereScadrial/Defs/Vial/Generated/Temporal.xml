<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_AllomanticVial_Temporal</defName>
        <label>Mistborn Vial: Temporal</label>
        <description>A vial containing multiple metals suspended in alcohol, used in allomancy.</description>
        <comps>
            <li Class="CosmereScadrial.Comps.Properties.AllomanticVial">
                <metalNames>
                    <li>cadmium</li>
                    <li>bendalloy</li>
                    <li>gold</li>
                    <li>electrum</li>
                </metalNames>
            </li>
        </comps>
        <orderedTakeGroup>AllomanticVial_Temporal</orderedTakeGroup>
    </ThingDef>
    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_CraftAllomanticVial_Temporal</defName>
        <label>Craft Mistborn Vial: Temporal</label>
        <description>Create a vial of multiple metals suspended in alcohol for use by Mistborns.</description>
        <ingredients>
            <li>
                <filter><thingDefs><li>Cadmium</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Bendalloy</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Gold</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Electrum</li></thingDefs></filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <Cosmere_AllomanticVial_Temporal>8</Cosmere_AllomanticVial_Temporal>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>AllomanticVial_Temporal</defName>
        <label>Mistborn Vial: Temporal</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>