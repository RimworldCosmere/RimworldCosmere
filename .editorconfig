# top-most EditorConfig file
root = true

[*.cs]
# Force block-scoped namespaces (with braces)
csharp_style_namespace_declarations = block_scoped:suggestion

# Optional: enforce using declarations instead of directives
csharp_style_using_directive_placement = outside_namespace:suggestion

# Optional: indent settings
indent_style = space
indent_size = 4

# Recommended: keep consistent file headers or documentation
file_header_template = unset
