<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_Scadrial_Thing_AllomanticVialBronze</defName>
        <label>misting vial: seeker</label>
        <description>A vial containing Bronze suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(191, 160, 138)</color>
        </graphicData>
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Bronze</metal>
            </li>
        </modExtensions>
        <orderedTakeGroup>Cosmere_Scadrial_OrderedTakeGroup_AllomanticVialBronze</orderedTakeGroup>
    </ThingDef>

    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_Scadrial_Recipe_CraftAllomanticVialBronze</defName>
        <label>craft misting vial: seeker</label>
        <description>Create a vial of Bronze infused alcohol for use by Mistborns and seekers.</description>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Bronze</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Bronze</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <Cosmere_Scadrial_Thing_AllomanticVialBronze>8</Cosmere_Scadrial_Thing_AllomanticVialBronze>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>Cosmere_Scadrial_OrderedTakeGroup_AllomanticVialBronze</defName>
        <label>allomantic vial: bronze</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>