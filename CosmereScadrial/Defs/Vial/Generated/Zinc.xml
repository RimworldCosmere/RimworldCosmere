<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_AllomanticVial_Zinc</defName>
        <label>misting vial: rioter</label>
        <description>A vial containing Zinc suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(128, 142, 129)</color>
        </graphicData>
        <modExtensions>
            <li Class="CosmereMetals.ModExtensions.MetalsLinked">
                <metal>Zinc</metal>
            </li>
        </modExtensions>
        <orderedTakeGroup>AllomanticVial_Zinc</orderedTakeGroup>
    </ThingDef>
    
    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_CraftAllomanticVial_Zinc</defName>
        <label>craft misting vial: rioter</label>
        <description>Create a vial of Zinc infused alcohol for use by Mistborns and rioters.</description>
        <ingredients>
            <li>
                <filter><thingDefs><li>Zinc</li></thingDefs></filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <Cosmere_AllomanticVial_Zinc>8</Cosmere_AllomanticVial_Zinc>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>AllomanticVial_Zinc</defName>
        <label>allomantic vial: zinc</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>