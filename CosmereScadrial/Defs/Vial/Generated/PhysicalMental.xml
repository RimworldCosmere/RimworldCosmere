<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_AllomanticVial_PhysicalMental</defName>
        <label>Mistborn Vial: Physical + Mental</label>
        <description>A vial containing multiple metals suspended in alcohol, used in allomancy.</description>
        <modExtensions>
            <li Class="CosmereCore.ModExtensions.MetalsLinked">
                <metals>
                    <li>Iron</li>
                    <li>Steel</li>
                    <li>Tin</li>
                    <li>Pewter</li>
                    <li>Zinc</li>
                    <li>Brass</li>
                    <li>Copper</li>
                    <li>Bronze</li>
                </metals>
            </li>
        </modExtensions>
        <orderedTakeGroup>AllomanticVial_PhysicalMental</orderedTakeGroup>
    </ThingDef>
    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_CraftAllomanticVial_PhysicalMental</defName>
        <label>Craft Mistborn Vial: Physical + Mental</label>
        <description>Create a vial of multiple metals suspended in alcohol for use by Mistborns.</description>
        <ingredients>
            <li>
                <filter><thingDefs><li>Iron</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Steel</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Tin</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Pewter</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Zinc</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Brass</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Copper</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Bronze</li></thingDefs></filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <Cosmere_AllomanticVial_PhysicalMental>8</Cosmere_AllomanticVial_PhysicalMental>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>AllomanticVial_PhysicalMental</defName>
        <label>Mistborn Vial: Physical + Mental</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>