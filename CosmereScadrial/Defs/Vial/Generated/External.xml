<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_AllomanticVial_External</defName>
        <label>mistborn vial: External</label>
        <description>A vial containing multiple metals suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(255, 255, 255)</color>
        </graphicData>
        <modExtensions>
            <li Class="CosmereMetals.ModExtensions.MetalsLinked">
                <metals>
                    <li>Iron</li>
                    <li>Steel</li>
                    <li>Zinc</li>
                    <li>Brass</li>
                    <li>Chromium</li>
                    <li>Nicrosil</li>
                    <li>Cadmium</li>
                    <li>Bendalloy</li>
                </metals>
            </li>
        </modExtensions>
        <orderedTakeGroup>AllomanticVial_External</orderedTakeGroup>
    </ThingDef>
