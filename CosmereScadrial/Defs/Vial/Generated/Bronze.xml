<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_AllomanticVial_Bronze</defName>
        <label>misting vial: seeker</label>
        <description>A vial containing Bronze suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(191, 160, 138)</color>
        </graphicData>
        <modExtensions>
            <li Class="CosmereCore.ModExtensions.MetalsLinked">
                <metal>Bronze</metal>
            </li>
        </modExtensions>
        <orderedTakeGroup>AllomanticVial_Bronze</orderedTakeGroup>
    </ThingDef>
    
    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_CraftAllomanticVial_Bronze</defName>
        <label>craft misting vial: seeker</label>
        <description>Create a vial of Bronze infused alcohol for use by Mistborns and seekers.</description>
        <ingredients>
            <li>
                <filter><thingDefs><li>Bronze</li></thingDefs></filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <Cosmere_AllomanticVial_Bronze>8</Cosmere_AllomanticVial_Bronze>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>AllomanticVial_Bronze</defName>
        <label>allomantic vial: bronze</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>