<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Misting: Zinc -->
    <GeneDef ParentName="AbstractMetallicArtsInvestitureGene">
        <defName>Cosmere_Misting_Zinc</defName>
        
        <label>zinc misting</label>
        <labelShortAdj>rioter</labelShortAdj>
        
        <description>Can riot emotions, pushing others to feel stronger emotions.</description>
        
        <displayCategory>Cosmere_Scadrial_Allomancy</displayCategory>
        <displayOrderInCategory>6</displayOrderInCategory>
        
        <resourceGizmoType>CosmereScadrial.Gizmo.InvestitureAllomancyGizmo</resourceGizmoType>
        <resourceLabel>zinc</resourceLabel>
        <resourceGizmoThresholds>
          <li>0.25</li>
          <li>0.5</li>
          <li>0.75</li>
        </resourceGizmoThresholds>
        <showGizmoOnWorldView>true</showGizmoOnWorldView>
        <showGizmoWhenDrafted>true</showGizmoWhenDrafted>
        <resourceDescription>Zinc is a cool, bluish-silver metal with a distinctive character. It not only protects other metals from corrosion through galvanization but also plays a crucial role in modern alloy production.\n\nCan riot emotions, pushing others to feel stronger emotions.</resourceDescription>
        
        <forcedTraits>
            <li>
                <def>Cosmere_Misting_Zinc</def>
            </li>
        </forcedTraits>
        
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Zinc</metal>
            </li>
        </modExtensions>
        
        <abilities>
            <li>Cosmere_Ability_Zinc_Aura</li>
            <li>Cosmere_Ability_Zinc_Target</li>
        </abilities>
        
        <iconPath>UI/Icons/Genes/Investiture/Allomancy/Zinc</iconPath>
    </GeneDef>
    
    <TraitDef ParentName="AbstractMetallicArtsInvestitureTrait">
        <defName>Cosmere_Misting_Zinc</defName>
        <label>rioter</label>
        <description>Can riot emotions, pushing others to feel stronger emotions.</description>
        
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Zinc</metal>
            </li>
        </modExtensions>
        
        <degreeDatas>
            <li>
                <label>misting: rioter</label>
                <description>Can riot emotions, pushing others to feel stronger emotions.</description>
                <degree>0</degree>
                <commonality>0</commonality>
            </li>
        </degreeDatas>
    </TraitDef>
    
