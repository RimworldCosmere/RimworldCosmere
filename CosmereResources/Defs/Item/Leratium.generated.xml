<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="CosmereResourceBase">
        <defName>Leratium</defName>
        <label>Leratium</label>
        <description>Leratium is an alloy of the two god metals: Atium and Lerasium. A more perfect combination of the god metals.</description>

        <thingCategories/>
        <researchPrerequisites>
            <li>Cosmere_God_Metals</li>
        </researchPrerequisites>
        <costList>
            <Lerasium>1</Lerasium>
            
            <Atium>1</Atium>
            
        </costList>

        <recipeMaker>
            <workAmount>3000</workAmount>
            <workSpeedStat>SmeltingSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <requiredGiverWorkType>Smithing</requiredGiverWorkType>
            <effectWorking>Smelt</effectWorking>
            <productCount>1</productCount>
            <soundWorking>Recipe_Smelt</soundWorking>
            <researchPrerequisites>
                <li>Smithing</li>
                <li>Cosmere_Complex_Alloys</li>
                <li>Cosmere_God_Metal_Alloys</li>
            </researchPrerequisites>
            <recipeUsers>
                <li>ElectricSmelter</li>
                <li MayRequire="cryptiklemur.cosmere.scadrial">Cosmere_Scadrial_Table_Forge</li>
            </recipeUsers>
            <displayPriority>200</displayPriority>
        </recipeMaker>

        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1</drawSize>
            <texPath>Item/Resource/Leratium</texPath>
        </graphicData>


        <statBases>
            <Beauty>100</Beauty>
            <MarketValue>15000</MarketValue>
        </statBases>

        <modExtensions>
            <li Class="CosmereResources.DefModExtension.MetalsLinked">
                <metal>Leratium</metal>
            </li>
        </modExtensions>
        <comps>
        </comps>
        <soundInteract>Metal_Drop</soundInteract>
        <soundDrop>Metal_Drop</soundDrop>
    </ThingDef>
</Defs>