<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_AllomanticVial_Internal</defName>
        <label>Mistborn Vial: Internal</label>
        <description>A vial containing multiple metals suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(255, 255, 255)</color>
        </graphicData>
        <modExtensions>
            <li Class="CosmereCore.ModExtensions.MetalsLinked">
                <metals>
                    <li>Tin</li>
                    <li>Pewter</li>
                    <li>Copper</li>
                    <li>Bronze</li>
                    <li>Duralumin</li>
                    <li>Gold</li>
                    <li>Electrum</li>
                </metals>
            </li>
        </modExtensions>
        <orderedTakeGroup>AllomanticVial_Internal</orderedTakeGroup>
    </ThingDef>
    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_CraftAllomanticVial_Internal</defName>
        <label>Craft Mistborn Vial: Internal</label>
        <description>Create a vial of multiple metals suspended in alcohol for use by Mistborns.</description>
        <ingredients>
            <li>
                <filter><thingDefs><li>Tin</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Pewter</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Copper</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Bronze</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Duralumin</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Gold</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Electrum</li></thingDefs></filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <Cosmere_AllomanticVial_Internal>8</Cosmere_AllomanticVial_Internal>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>AllomanticVial_Internal</defName>
        <label>Mistborn Vial: Internal</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>