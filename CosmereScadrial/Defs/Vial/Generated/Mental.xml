<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_AllomanticVial_Mental</defName>
        <label>Mistborn Vial: Mental</label>
        <description>A vial containing multiple metals suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(255, 255, 255)</color>
        </graphicData>
        <modExtensions>
            <li Class="CosmereCore.ModExtensions.MetalsLinked">
                <metals>
                    <li>Zinc</li>
                    <li>Brass</li>
                    <li>Copper</li>
                    <li>Bronze</li>
                </metals>
            </li>
        </modExtensions>
        <orderedTakeGroup>AllomanticVial_Mental</orderedTakeGroup>
    </ThingDef>
    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_CraftAllomanticVial_Mental</defName>
        <label>Craft Mistborn Vial: Mental</label>
        <description>Create a vial of multiple metals suspended in alcohol for use by Mistborns.</description>
        <ingredients>
            <li>
                <filter><thingDefs><li>Zinc</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Brass</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Copper</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Bronze</li></thingDefs></filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <Cosmere_AllomanticVial_Mental>8</Cosmere_AllomanticVial_Mental>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>AllomanticVial_Mental</defName>
        <label>Mistborn Vial: Mental</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>