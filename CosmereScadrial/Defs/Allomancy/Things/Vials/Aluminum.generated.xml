<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_Scadrial_Thing_AllomanticVialAluminum</defName>
        <label>misting vial: gnat (aluminum)</label>
        <description>A vial containing Aluminum suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(163, 163, 163)</color>
        </graphicData>
        <modExtensions>
            <li Class="CosmereResources.DefModExtension.MetalsLinked">
                <metal>Aluminum</metal>
            </li>
        </modExtensions>
        <orderedTakeGroup>Cosmere_Scadrial_OrderedTakeGroup_AllomanticVialAluminum</orderedTakeGroup>
    </ThingDef>

    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_Scadrial_Recipe_CraftAllomanticVialAluminum</defName>
        <label>craft misting vial: gnat (aluminum)</label>
        <description>Create a vial of Aluminum infused alcohol for use by Mistborns and gnat (aluminum)s.</description>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Aluminum</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Aluminum</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <Cosmere_Scadrial_Thing_AllomanticVialAluminum>8</Cosmere_Scadrial_Thing_AllomanticVialAluminum>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>Cosmere_Scadrial_OrderedTakeGroup_AllomanticVialAluminum</defName>
        <label>allomantic vial: aluminum</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>