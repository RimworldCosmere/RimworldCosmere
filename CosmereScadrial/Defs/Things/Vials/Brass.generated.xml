<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_Scadrial_Thing_AllomanticVialBrass</defName>
        <label>misting vial: soother</label>
        <description>A vial containing Brass suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(175, 148, 91)</color>
        </graphicData>
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Brass</metal>
            </li>
        </modExtensions>
        <orderedTakeGroup>Cosmere_Scadrial_OrderedTakeGroup_AllomanticVialBrass</orderedTakeGroup>
    </ThingDef>

    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_Scadrial_Recipe_CraftAllomanticVialBrass</defName>
        <label>craft misting vial: soother</label>
        <description>Create a vial of Brass infused alcohol for use by Mistborns and soothers.</description>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Brass</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Brass</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <Cosmere_Scadrial_Thing_AllomanticVialBrass>8</Cosmere_Scadrial_Thing_AllomanticVialBrass>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>Cosmere_Scadrial_OrderedTakeGroup_AllomanticVialBrass</defName>
        <label>allomantic vial: brass</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>