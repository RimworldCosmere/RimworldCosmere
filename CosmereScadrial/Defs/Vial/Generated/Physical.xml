<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_AllomanticVial_Physical</defName>
        <label>mistborn vial: Physical</label>
        <description>A vial containing multiple metals suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(255, 255, 255)</color>
        </graphicData>
        <modExtensions>
            <li Class="CosmereCore.ModExtensions.MetalsLinked">
                <metals>
                    <li>Iron</li>
                    <li>Steel</li>
                    <li>Tin</li>
                    <li>Pewter</li>
                </metals>
            </li>
        </modExtensions>
        <orderedTakeGroup>AllomanticVial_Physical</orderedTakeGroup>
    </ThingDef>
    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_CraftAllomanticVial_Physical</defName>
        <label>craft mistborn vial: Physical</label>
        <description>Create a vial of multiple metals suspended in alcohol for use by Mistborns.</description>
        <ingredients>
            <li>
                <filter><thingDefs><li>Iron</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Steel</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Tin</li></thingDefs></filter>
                <count>1</count>
            </li>
            <li>
                <filter><thingDefs><li>Pewter</li></thingDefs></filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <Cosmere_AllomanticVial_Physical>8</Cosmere_AllomanticVial_Physical>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>AllomanticVial_Physical</defName>
        <label>mistborn vial: Physical</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>