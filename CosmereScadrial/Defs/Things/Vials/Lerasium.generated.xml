<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_Scadrial_Thing_AllomanticVialLerasium</defName>
        <label>misting vial: </label>
        <description>A vial containing Lerasium suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(132, 159, 106)</color>
        </graphicData>
        <modExtensions>
            <li Class="CosmereResources.DefModExtension.MetalsLinked">
                <metal>Lerasium</metal>
            </li>
        </modExtensions>
        <orderedTakeGroup>Cosmere_Scadrial_OrderedTakeGroup_AllomanticVialLerasium</orderedTakeGroup>
    </ThingDef>
    
    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_Scadrial_Recipe_CraftAllomanticVialLerasium</defName>
        <label>craft misting vial: </label>
        <description>Create a vial of Lerasium infused alcohol for use by Mistborns and s.</description>
        <ingredients>
            <li>
                <filter><thingDefs><li>Lerasium</li></thingDefs></filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <Cosmere_Scadrial_Thing_AllomanticVialLerasium>8</Cosmere_Scadrial_Thing_AllomanticVialLerasium>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>Cosmere_Scadrial_OrderedTakeGroup_AllomanticVialLerasium</defName>
        <label>allomantic vial: lerasium</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>