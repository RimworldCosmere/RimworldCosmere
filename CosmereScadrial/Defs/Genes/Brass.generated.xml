<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Misting: Brass -->
    <GeneDef ParentName="AbstractMetallicArtsInvestitureGene">
        <defName>Cosmere_Misting_Brass</defName>
        
        <label>brass misting</label>
        <labelShortAdj>soother</labelShortAdj>
        
        <description>Can soothe emotions, calming people or manipulating moods.</description>
        
        <displayCategory>Cosmere_Scadrial_Allomancy</displayCategory>
        <displayOrderInCategory>7</displayOrderInCategory>
        
        <resourceGizmoType>CosmereScadrial.Gizmo.InvestitureAllomancyGizmo</resourceGizmoType>
        <resourceLabel>brass</resourceLabel>
        <resourceGizmoThresholds>
          <li>0.25</li>
          <li>0.5</li>
          <li>0.75</li>
        </resourceGizmoThresholds>
        <showGizmoOnWorldView>true</showGizmoOnWorldView>
        <showGizmoWhenDrafted>true</showGizmoWhenDrafted>
        <resourceDescription>Brass is a warm, golden alloy produced by blending Ind_Copper with zinc. Praised for its attractive appearance and excellent workability, brass finds extensive use in both decorative applications and practical components.\n\nCan soothe emotions, calming people or manipulating moods.</resourceDescription>
        
        <forcedTraits>
            <li>
                <def>Cosmere_Misting_Brass</def>
            </li>
        </forcedTraits>
        
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Brass</metal>
            </li>
        </modExtensions>
        
        <abilities>
            <li>Cosmere_Ability_Brass_Aura</li>
            <li>Cosmere_Ability_Brass_Target</li>
        </abilities>
        
        <iconPath>UI/Icons/Genes/Investiture/Allomancy/Brass</iconPath>
    </GeneDef>
    
    <TraitDef ParentName="AbstractMetallicArtsInvestitureTrait">
        <defName>Cosmere_Misting_Brass</defName>
        <label>soother</label>
        <description>Can soothe emotions, calming people or manipulating moods.</description>
        
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Brass</metal>
            </li>
        </modExtensions>
        
        <degreeDatas>
            <li>
                <label>misting: soother</label>
                <description>Can soothe emotions, calming people or manipulating moods.</description>
                <degree>0</degree>
                <commonality>0</commonality>
            </li>
        </degreeDatas>
    </TraitDef>
    
