<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AbstractAllomanticVial">
        <defName>Cosmere_Scadrial_Thing_AllomanticVialCopper</defName>
        <label>misting vial: smoker</label>
        <description>A vial containing Copper suspended in alcohol, used in allomancy.</description>
        <graphicData>
            <color>(185, 129, 80)</color>
        </graphicData>
        <modExtensions>
            <li Class="CosmereResources.DefModExtension.MetalsLinked">
                <metal>Copper</metal>
            </li>
        </modExtensions>
        <orderedTakeGroup>Cosmere_Scadrial_OrderedTakeGroup_AllomanticVialCopper</orderedTakeGroup>
    </ThingDef>

    <RecipeDef ParentName="AbstractCraftAllomanticVial">
        <defName>Cosmere_Scadrial_Recipe_CraftAllomanticVialCopper</defName>
        <label>craft misting vial: smoker</label>
        <description>Create a vial of Copper infused alcohol for use by Mistborns and smokers.</description>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Copper</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Copper</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <Cosmere_Scadrial_Thing_AllomanticVialCopper>8</Cosmere_Scadrial_Thing_AllomanticVialCopper>
        </products>
    </RecipeDef>

    <OrderedTakeGroupDef>
        <defName>Cosmere_Scadrial_OrderedTakeGroup_AllomanticVialCopper</defName>
        <label>allomantic vial: copper</label>
        <max>20</max>
    </OrderedTakeGroupDef>
</Defs>