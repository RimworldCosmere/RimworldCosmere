    <!-- Antimony -->
    <ThingDef ParentName="RockBase">
        <defName>Cosmere_Roshar_MineableAntimony</defName>
        <label>Raw Antimony</label>
        <description>Raw antimony embedded in chunks of stone. Can be mined and extracted by colonists.</description>
        <graphicData>
            <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <color>(61, 112, 117)</color>
            <colorTwo>(220,220,220)</colorTwo>
        </graphicData>
        <statBases>
            <MaxHitPoints>1500</MaxHitPoints>
        </statBases>
        <building>
            <isResourceRock>true</isResourceRock>
            <mineableThing>Cosmere_Roshar_RawAntimony</mineableThing>
            <mineableYield>5</mineableYield>
            <mineableScatterCommonality>0.3</mineableScatterCommonality>
            <mineableScatterLumpSizeRange>8~16</mineableScatterLumpSizeRange>
            <veinMineable>true</veinMineable>
        </building>
    </ThingDef>
