<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Misting: Chromium -->
    <GeneDef ParentName="AbstractMetallicArtsInvestitureGene">
        <defName>Cosmere_Misting_Chromium</defName>
        
        <label>chromium misting</label>
        <labelShortAdj>leecher</labelShortAdj>
        
        <description>Wipes away another Allomancer&#x27;s metal reserves.</description>
        
        <displayCategory>Cosmere_Scadrial_Allomancy</displayCategory>
        <displayOrderInCategory>12</displayOrderInCategory>
        
        <resourceGizmoType>CosmereScadrial.Gizmo.InvestitureAllomancyGizmo</resourceGizmoType>
        <resourceLabel>chromium</resourceLabel>
        <resourceGizmoThresholds>
          <li>0.25</li>
          <li>0.5</li>
          <li>0.75</li>
        </resourceGizmoThresholds>
        <showGizmoOnWorldView>true</showGizmoOnWorldView>
        <showGizmoWhenDrafted>true</showGizmoWhenDrafted>
        <resourceDescription>Chromium is a hard, lustrous metal renowned for its brilliant shine and outstanding resistance to tarnish. It enhances the durability and appearance of alloys and is often used to create sleek, modern finishes.\n\nWipes away another Allomancer&#x27;s metal reserves.</resourceDescription>
        
        <forcedTraits>
            <li>
                <def>Cosmere_Misting_Chromium</def>
            </li>
        </forcedTraits>
        
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Chromium</metal>
            </li>
        </modExtensions>
        
        <abilities>
            <li>Cosmere_Ability_Chromium</li>
        </abilities>
        
        <iconPath>UI/Icons/Genes/Investiture/Allomancy/Chromium</iconPath>
    </GeneDef>
    
    <TraitDef ParentName="AbstractMetallicArtsInvestitureTrait">
        <defName>Cosmere_Misting_Chromium</defName>
        <label>leecher</label>
        <description>Wipes away another Allomancer&#x27;s metal reserves.</description>
        
        <modExtensions>
            <li Class="CosmereResources.ModExtensions.MetalsLinked">
                <metal>Chromium</metal>
            </li>
        </modExtensions>
        
        <degreeDatas>
            <li>
                <label>misting: leecher</label>
                <description>Wipes away another Allomancer&#x27;s metal reserves.</description>
                <degree>0</degree>
                <commonality>0</commonality>
            </li>
        </degreeDatas>
    </TraitDef>
    
