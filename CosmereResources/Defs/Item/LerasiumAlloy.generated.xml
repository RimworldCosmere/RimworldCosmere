            </recipeUsers>
            <displayPriority>200</displayPriority>
        </recipeMaker>
        <stuffCategories>
            <li>Cosmere_Resources_StuffCategory_AllomanticMetals</li>
        </stuffCategories>
        <costStuffCount>32</costStuffCount>

        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1</drawSize>
            <texPath>Item/Resource/LerasiumAlloy</texPath>
        </graphicData>


        <statBases>
            <Beauty>80</Beauty>
            <MarketValue>8000</MarketValue>
        </statBases>

        <modExtensions>
            <li Class="CosmereResources.DefModExtension.MetalsLinked">
                <metal>LerasiumAlloy</metal>
            </li>
        </modExtensions>
        <comps>
        </comps>
        <soundInteract>Metal_Drop</soundInteract>
        <soundDrop>Metal_Drop</soundDrop>
