<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <JobDef>
        <defName>Cosmere_Roshar_RefuelSphereLamp</defName>
        <label>Add Stormlight Sphere</label>
        <driverClass>CosmereRoshar.Job.Driver.AddSphereToLamp</driverClass>
        <reportString>Adding a Stormlight Sphere...</reportString>
        <playerInterruptible>true</playerInterruptible>
        <checkOverrideOnDamage>Never</checkOverrideOnDamage>
    </JobDef>

    <JobDef>
        <defName>Cosmere_Roshar_RefuelFabrial</defName>
        <label>Refuel fabial</label>
        <driverClass>CosmereRoshar.Job.Driver.AddGemToFabrial</driverClass>
        <reportString>Adding gem to fabrial..</reportString>
        <playerInterruptible>true</playerInterruptible>
        <checkOverrideOnDamage>Never</checkOverrideOnDamage>
    </JobDef>

    <JobDef>
        <defName>Cosmere_Roshar_RemoveFromFabrial</defName>
        <label>Remove gem from fabial</label>
        <driverClass>CosmereRoshar.Job.Driver.RemoveGemFromFabrial</driverClass>
        <reportString>Removing gem from fabrial..</reportString>
        <playerInterruptible>true</playerInterruptible>
        <checkOverrideOnDamage>Never</checkOverrideOnDamage>
    </JobDef>

    <JobDef>
        <defName>Cosmere_Roshar_CastAbilityOnTarget</defName>
        <driverClass>CosmereRoshar.Job.Driver.CastAbilityOnTarget</driverClass>
        <reportString>casting ability on Target</reportString>
        <casualInterruptible>true</casualInterruptible>
    </JobDef>
</Defs>